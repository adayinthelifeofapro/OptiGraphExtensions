@using EPiServer.Shell.Navigation
@model OptiGraphExtensions.Administration.AdministrationViewModel

@{
    Layout = "/Views/Shared/Layouts/_LayoutBlazorAdminPage.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@Model.Title</title>
</head>
<body>
    @Html.CreatePlatformNavigationMenu()
    <div @Html.ApplyPlatformNavigation()>
        <div class="epi-contentArea">
            <div class="epi-contentAreaHeader">
                <h1>@Model.Title</h1>
                <p class="subtitle">@Model.Subtitle</p>
            </div>

            <div class="epi-contentGroup">
                <div class="epi-groupHeader">
                    <h2 class="epi-h2">Key Features</h2>
                </div>
                <div class="epi-content">
                    <div class="feature-grid">
                        <div class="feature-card">
                            <h3>Synonym Management</h3>
                            <p>Create, update, and delete synonyms to enhance search functionality within Optimizely Graph. Support for multiple synonym groups with real-time search improvements.</p>
                            <ul>
                                <li>Intuitive admin interface for synonym creation</li>
                                <li>Real-time synchronization with Optimizely Graph</li>
                                <li>Bulk operations and validation</li>
                            </ul>
                        </div>
                        
                        <div class="feature-card">
                            <h3>Pinned Results Management</h3>
                            <p>Create and manage pinned results collections to ensure specific content appears prominently for targeted search phrases within Optimizely Graph.</p>
                            <ul>
                                <li>Priority-based result ordering</li>
                                <li>Collection-based organization</li>
                                <li>Bidirectional synchronization with Graph</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="epi-contentGroup">
                <div class="epi-groupHeader">
                    <h2 class="epi-h2">Integration</h2>
                </div>
                <div class="epi-content">
                    <p>This add-on provides seamless integration with Optimizely Graph, ensuring that your synonym and pinned result configurations are automatically synchronized and maintained across your search infrastructure.</p>
                    
                    <div class="integration-features">
                        <div class="integration-item">
                            <strong>Automatic Synchronization:</strong> Keep local data in sync with Graph collections
                        </div>
                        <div class="integration-item">
                            <strong>Bidirectional Updates:</strong> Changes flow both ways between local database and Graph
                        </div>
                        <div class="integration-item">
                            <strong>Error Handling:</strong> Graceful fallback to local data when Graph is unavailable
                        </div>
                    </div>
                </div>
            </div>

            <div class="epi-contentGroup">
                <div class="epi-groupHeader">
                    <h2 class="epi-h2">Quick Navigation</h2>
                </div>
                <div class="epi-content">
                    <div class="navigation-links">
                        <a href="/optimizely-graphextensions/administration/synonyms" class="nav-link">
                            <strong>Manage Synonyms</strong>
                            <span>Create and manage search synonyms</span>
                        </a>
                        <a href="/optimizely-graphextensions/administration/pinned-results" class="nav-link">
                            <strong>Manage Pinned Results</strong>
                            <span>Configure pinned search results</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .epi-contentArea {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .epi-contentAreaHeader {
            margin-bottom: 24px;
            padding-bottom: 12px;
        }

        .epi-contentAreaHeader h1 {
            font-size: 28px;
            font-weight: 300;
            margin: 0 0 12px 0;
            color: #333;
        }

        .subtitle {
            font-size: 16px;
            color: #666;
            line-height: 1.5;
            margin: 0;
        }

        .epi-contentGroup {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 20px;
        }

        .epi-groupHeader {
            background: #f5f5f5;
            border-bottom: 1px solid #ddd;
            padding: 15px 20px;
        }

        .epi-h2 {
            font-size: 20px;
            font-weight: 500;
            margin: 0;
            color: #333;
        }

        .epi-content {
            padding: 20px;
        }

        .feature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 0;
        }

        .feature-card {
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 20px;
            background: #f9f9f9;
        }

        .feature-card h3 {
            margin: 0 0 12px 0;
            color: #0066cc;
            font-size: 18px;
        }

        .feature-card p {
            margin: 0 0 16px 0;
            color: #555;
            line-height: 1.5;
        }

        .feature-card ul {
            margin: 0;
            padding-left: 20px;
            color: #666;
        }

        .feature-card li {
            margin-bottom: 6px;
        }

        .integration-features {
            margin-top: 16px;
        }

        .integration-item {
            padding: 12px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .integration-item:last-child {
            border-bottom: none;
        }

        .integration-item strong {
            color: #0066cc;
        }

        .navigation-links {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 16px;
            margin-top: 0;
        }

        .nav-link {
            display: block;
            padding: 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
            text-decoration: none;
            color: #333;
            background: #fff;
            transition: all 0.2s ease;
        }

        .nav-link:hover {
            border-color: #0066cc;
            background: #f8f9fa;
            text-decoration: none;
            color: #333;
        }

        .nav-link strong {
            display: block;
            color: #0066cc;
            font-size: 16px;
            margin-bottom: 4px;
        }

        .nav-link span {
            font-size: 14px;
            color: #666;
        }
    </style>
</body>
</html>