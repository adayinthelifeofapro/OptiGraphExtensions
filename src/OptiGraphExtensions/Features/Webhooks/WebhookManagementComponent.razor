@using Microsoft.AspNetCore.Components
@using OptiGraphExtensions.Features.Webhooks
@using OptiGraphExtensions.Features.Common.Services
@using OptiGraphExtensions.Features.Webhooks.Models
@inherits WebhookManagementComponentBase

<div class="epi-contentArea">
    <div class="epi-contentAreaHeader">
        <h1 class="epi-h1">Webhook Management</h1>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--danger">
            <div class="epi-notificationbar-text">@ErrorMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">x</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--success">
            <div class="epi-notificationbar-text">@SuccessMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">x</button>
        </div>
    }

    @if (IsCreating)
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">Create New Webhook</h2>
            </div>
            <div class="epi-form">
                <div class="epi-form-row">
                    <div class="epi-form-field epi-form-field--url">
                        <label for="webhookUrl" class="epi-label">Webhook URL *</label>
                        <input id="webhookUrl" @bind="NewWebhook.Url"
                               class="epi-textbox" placeholder="https://your-endpoint.com/webhook" />
                    </div>
                    <div class="epi-form-field epi-form-field--method">
                        <label for="webhookMethod" class="epi-label">HTTP Method</label>
                        <select id="webhookMethod" @bind="NewWebhook.Method" class="epi-select">
                            @foreach (var method in AvailableHttpMethods)
                            {
                                <option value="@method">@method</option>
                            }
                        </select>
                    </div>
                    <div class="epi-form-field epi-form-field--status">
                        <label class="epi-label">Status</label>
                        <div class="epi-checkbox-wrapper">
                            <input type="checkbox" id="webhookDisabled" @bind="NewWebhook.Disabled" />
                            <label for="webhookDisabled">Disabled</label>
                        </div>
                    </div>
                </div>

                <div class="epi-form-section">
                    <div class="epi-section-header">
                        <h3 class="epi-h3">Event Topics</h3>
                        <button type="button" class="epi-help-toggle" @onclick="ToggleTopicHelp" title="Show topic descriptions">
                            <span class="epi-help-icon">?</span>
                        </button>
                    </div>
                    <p class="epi-help-text">Select which events should trigger this webhook. Leave empty for all events.</p>

                    @if (ShowTopicHelp)
                    {
                        <div class="epi-topic-help">
                            <div class="epi-topic-help-header">
                                <strong>Topic Pattern Reference</strong>
                                <button type="button" @onclick="ToggleTopicHelp" class="epi-help-close">x</button>
                            </div>
                            <div class="epi-topic-help-content">
                                <p class="epi-topic-help-intro">Topics use the pattern <code>{subject}.{action}</code> where:</p>

                                <div class="epi-topic-help-group">
                                    <h4>Subjects</h4>
                                    <ul>
                                        <li><code>doc</code> - Single content item operations</li>
                                        <li><code>bulk</code> - Batch/multiple content operations</li>
                                        <li><code>*</code> - Wildcard matching both doc and bulk</li>
                                    </ul>
                                </div>

                                <div class="epi-topic-help-group">
                                    <h4>Actions</h4>
                                    <ul>
                                        <li><code>created</code> - Content was created/indexed for the first time</li>
                                        <li><code>updated</code> - Existing content was modified</li>
                                        <li><code>deleted</code> - Content was removed from the index</li>
                                        <li><code>completed</code> - Bulk operation finished (bulk only)</li>
                                        <li><code>*</code> - Wildcard matching all actions</li>
                                    </ul>
                                </div>

                                <div class="epi-topic-help-group">
                                    <h4>Common Examples</h4>
                                    <ul>
                                        <li><code>doc.updated</code> - Single content updates only</li>
                                        <li><code>bulk.completed</code> - When bulk sync finishes</li>
                                        <li><code>*.deleted</code> - All deletion events</li>
                                        <li><code>*.*</code> - All events (same as leaving empty)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="epi-topics-container">
                        <div class="epi-topic-selector">
                            <select id="topicSelect" class="epi-select" @onchange="@((e) => AddTopic(e.Value?.ToString() ?? string.Empty))">
                                <option value="">Select a topic...</option>
                                @foreach (var topic in AvailableTopics.Where(t => !NewWebhook.Topics.Contains(t)))
                                {
                                    <option value="@topic" title="@GetTopicDescription(topic)">@topic</option>
                                }
                            </select>
                        </div>
                        @if (NewWebhook.Topics.Any())
                        {
                            <div class="epi-selected-topics">
                                @foreach (var topic in NewWebhook.Topics)
                                {
                                    <span class="epi-topic-badge" title="@GetTopicDescription(topic)">
                                        @topic
                                        <button type="button" @onclick="() => RemoveTopic(topic)" class="epi-topic-remove">x</button>
                                    </span>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="epi-form-section">
                    <div class="epi-section-header">
                        <h3 class="epi-h3">Filters (Optional)</h3>
                        <button type="button" class="epi-help-toggle" @onclick="ToggleFilterHelp" title="Show filter examples">
                            <span class="epi-help-icon">?</span>
                        </button>
                    </div>
                    <p class="epi-help-text">Add filters to control when notifications are sent based on content properties.</p>

                    @if (ShowFilterHelp)
                    {
                        <div class="epi-topic-help">
                            <div class="epi-topic-help-header">
                                <strong>Filter Reference</strong>
                                <button type="button" @onclick="ToggleFilterHelp" class="epi-help-close">x</button>
                            </div>
                            <div class="epi-topic-help-content">
                                <p class="epi-topic-help-intro">Filters allow you to receive notifications only for content matching specific criteria. Multiple filters are combined with AND logic.</p>

                                <div class="epi-topic-help-group">
                                    <h4>Common Fields</h4>
                                    <ul>
                                        <li><code>Status</code> - Content status (e.g., Published, Draft, Expired)</li>
                                        <li><code>ContentType</code> - The content type name</li>
                                        <li><code>Language</code> - Content language code (e.g., en, sv)</li>
                                        <li><code>Name</code> - Content item name</li>
                                        <li><code>Changed</code> - Last modified date</li>
                                        <li><code>_id</code> - Specific document ID</li>
                                    </ul>
                                </div>

                                <div class="epi-topic-help-group">
                                    <h4>Operators</h4>
                                    <ul>
                                        <li><code>eq</code> - Equals (exact match)</li>
                                        <li><code>ne</code> - Not equals (exclude matches)</li>
                                        <li><code>contains</code> - Contains substring</li>
                                    </ul>
                                </div>

                                <div class="epi-topic-help-group">
                                    <h4>Example Filters</h4>
                                    <table class="epi-filter-examples-table">
                                        <tr>
                                            <td><code>Status</code> <code>eq</code> <code>Published</code></td>
                                            <td>Only published content</td>
                                        </tr>
                                        <tr>
                                            <td><code>ContentType</code> <code>eq</code> <code>ArticlePage</code></td>
                                            <td>Only ArticlePage content type</td>
                                        </tr>
                                        <tr>
                                            <td><code>Language</code> <code>eq</code> <code>en</code></td>
                                            <td>Only English content</td>
                                        </tr>
                                        <tr>
                                            <td><code>Name</code> <code>contains</code> <code>News</code></td>
                                            <td>Content with "News" in name</td>
                                        </tr>
                                        <tr>
                                            <td><code>Status</code> <code>ne</code> <code>Draft</code></td>
                                            <td>Exclude draft content</td>
                                        </tr>
                                    </table>
                                </div>

                                <div class="epi-topic-help-note">
                                    <strong>Note:</strong> Field names are case-sensitive. Check your Optimizely Graph schema for available fields.
                                </div>
                            </div>
                        </div>
                    }

                    @if (NewWebhook.Filters.Any())
                    {
                        <div class="epi-filters-list">
                            @foreach (var filter in NewWebhook.Filters)
                            {
                                <div class="epi-filter-row">
                                    <input type="text" @bind="filter.Field" class="epi-textbox epi-textbox--small" placeholder="Field (e.g., Status)" title="The content property to filter on" />
                                    <select @bind="filter.Operator" class="epi-select epi-select--small" title="Comparison operator">
                                        <option value="eq">equals</option>
                                        <option value="ne">not equals</option>
                                        <option value="contains">contains</option>
                                    </select>
                                    <input type="text" @bind="filter.Value" class="epi-textbox epi-textbox--small" placeholder="Value (e.g., Published)" title="The value to compare against" />
                                    <button type="button" @onclick="() => RemoveFilter(filter)" class="epi-button epi-button--danger epi-button--small">Remove</button>
                                </div>
                            }
                        </div>
                    }
                    <button type="button" @onclick="AddFilter" class="epi-button epi-button--secondary epi-button--small">Add Filter</button>
                </div>

                <div class="epi-form-actions">
                    <button @onclick="CreateWebhook" class="epi-button epi-button--primary" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="epi-loader-small"></span>
                        }
                        Create Webhook
                    </button>
                    <button @onclick="CancelCreate" class="epi-button epi-button--secondary" disabled="@IsLoading">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    }
    else if (IsEditing)
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">Edit Webhook</h2>
            </div>
            <div class="epi-form">
                <div class="epi-form-row">
                    <div class="epi-form-field epi-form-field--url">
                        <label for="editWebhookUrl" class="epi-label">Webhook URL *</label>
                        <input id="editWebhookUrl" @bind="EditingWebhook.Url"
                               class="epi-textbox" placeholder="https://your-endpoint.com/webhook" />
                    </div>
                    <div class="epi-form-field epi-form-field--method">
                        <label for="editWebhookMethod" class="epi-label">HTTP Method</label>
                        <select id="editWebhookMethod" @bind="EditingWebhook.Method" class="epi-select">
                            @foreach (var method in AvailableHttpMethods)
                            {
                                <option value="@method">@method</option>
                            }
                        </select>
                    </div>
                    <div class="epi-form-field epi-form-field--status">
                        <label class="epi-label">Status</label>
                        <div class="epi-checkbox-wrapper">
                            <input type="checkbox" id="editWebhookDisabled" @bind="EditingWebhook.Disabled" />
                            <label for="editWebhookDisabled">Disabled</label>
                        </div>
                    </div>
                </div>

                <div class="epi-form-section">
                    <div class="epi-section-header">
                        <h3 class="epi-h3">Event Topics</h3>
                        <button type="button" class="epi-help-toggle" @onclick="ToggleEditTopicHelp" title="Show topic descriptions">
                            <span class="epi-help-icon">?</span>
                        </button>
                    </div>
                    <p class="epi-help-text">Select which events should trigger this webhook. Leave empty for all events.</p>

                    @if (ShowEditTopicHelp)
                    {
                        <div class="epi-topic-help">
                            <div class="epi-topic-help-header">
                                <strong>Topic Pattern Reference</strong>
                                <button type="button" @onclick="ToggleEditTopicHelp" class="epi-help-close">x</button>
                            </div>
                            <div class="epi-topic-help-content">
                                <p class="epi-topic-help-intro">Topics use the pattern <code>{subject}.{action}</code> where:</p>

                                <div class="epi-topic-help-group">
                                    <h4>Subjects</h4>
                                    <ul>
                                        <li><code>doc</code> - Single content item operations</li>
                                        <li><code>bulk</code> - Batch/multiple content operations</li>
                                        <li><code>*</code> - Wildcard matching both doc and bulk</li>
                                    </ul>
                                </div>

                                <div class="epi-topic-help-group">
                                    <h4>Actions</h4>
                                    <ul>
                                        <li><code>created</code> - Content was created/indexed for the first time</li>
                                        <li><code>updated</code> - Existing content was modified</li>
                                        <li><code>deleted</code> - Content was removed from the index</li>
                                        <li><code>completed</code> - Bulk operation finished (bulk only)</li>
                                        <li><code>*</code> - Wildcard matching all actions</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="epi-topics-container">
                        <div class="epi-topic-selector">
                            <select id="editTopicSelect" class="epi-select" @onchange="@((e) => AddEditTopic(e.Value?.ToString() ?? string.Empty))">
                                <option value="">Select a topic...</option>
                                @foreach (var topic in AvailableTopics.Where(t => !EditingWebhook.Topics.Contains(t)))
                                {
                                    <option value="@topic" title="@GetTopicDescription(topic)">@topic</option>
                                }
                            </select>
                        </div>
                        @if (EditingWebhook.Topics.Any())
                        {
                            <div class="epi-selected-topics">
                                @foreach (var topic in EditingWebhook.Topics)
                                {
                                    <span class="epi-topic-badge" title="@GetTopicDescription(topic)">
                                        @topic
                                        <button type="button" @onclick="() => RemoveEditTopic(topic)" class="epi-topic-remove">x</button>
                                    </span>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="epi-form-section">
                    <div class="epi-section-header">
                        <h3 class="epi-h3">Filters (Optional)</h3>
                        <button type="button" class="epi-help-toggle" @onclick="ToggleEditFilterHelp" title="Show filter examples">
                            <span class="epi-help-icon">?</span>
                        </button>
                    </div>
                    <p class="epi-help-text">Add filters to control when notifications are sent based on content properties.</p>

                    @if (ShowEditFilterHelp)
                    {
                        <div class="epi-topic-help">
                            <div class="epi-topic-help-header">
                                <strong>Filter Reference</strong>
                                <button type="button" @onclick="ToggleEditFilterHelp" class="epi-help-close">x</button>
                            </div>
                            <div class="epi-topic-help-content">
                                <p class="epi-topic-help-intro">Filters allow you to receive notifications only for content matching specific criteria.</p>

                                <div class="epi-topic-help-group">
                                    <h4>Common Fields</h4>
                                    <ul>
                                        <li><code>Status</code> - Content status (e.g., Published, Draft)</li>
                                        <li><code>ContentType</code> - The content type name</li>
                                        <li><code>Language</code> - Content language code</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                    @if (EditingWebhook.Filters.Any())
                    {
                        <div class="epi-filters-list">
                            @foreach (var filter in EditingWebhook.Filters)
                            {
                                <div class="epi-filter-row">
                                    <input type="text" @bind="filter.Field" class="epi-textbox epi-textbox--small" placeholder="Field (e.g., Status)" title="The content property to filter on" />
                                    <select @bind="filter.Operator" class="epi-select epi-select--small" title="Comparison operator">
                                        <option value="eq">equals</option>
                                        <option value="ne">not equals</option>
                                        <option value="contains">contains</option>
                                    </select>
                                    <input type="text" @bind="filter.Value" class="epi-textbox epi-textbox--small" placeholder="Value (e.g., Published)" title="The value to compare against" />
                                    <button type="button" @onclick="() => RemoveEditFilter(filter)" class="epi-button epi-button--danger epi-button--small">Remove</button>
                                </div>
                            }
                        </div>
                    }
                    <button type="button" @onclick="AddEditFilter" class="epi-button epi-button--secondary epi-button--small">Add Filter</button>
                </div>

                <div class="epi-form-actions">
                    <button @onclick="UpdateWebhook" class="epi-button epi-button--primary" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="epi-loader-small"></span>
                        }
                        Save Changes
                    </button>
                    <button @onclick="CancelEdit" class="epi-button epi-button--secondary" disabled="@IsLoading">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">Registered Webhooks</h2>
                <div class="epi-header-actions">
                    <div class="epi-filter-group">
                        <label for="statusFilter" class="epi-label-inline">Status:</label>
                        <select id="statusFilter" @onchange="OnStatusFilterChanged" class="epi-select epi-select--small">
                            <option value="">All</option>
                            <option value="active" selected="@(SelectedStatusFilter == "active")">Active</option>
                            <option value="disabled" selected="@(SelectedStatusFilter == "disabled")">Disabled</option>
                        </select>
                    </div>
                    <span class="epi-badge">@TotalItems @(HasActiveFilters ? "filtered" : "total") webhooks</span>
                    <button @onclick="ShowCreateForm" class="epi-button epi-button--primary epi-button--small" disabled="@IsLoading">
                        Register New Webhook
                    </button>
                </div>
            </div>
            <div class="epi-content">
                @if (IsLoading)
                {
                    <div class="epi-loading">
                        <div class="epi-loader"></div>
                        <p>Loading webhooks from Optimizely Graph...</p>
                    </div>
                }
                else if (!FilteredWebhooks.Any())
                {
                    <div class="epi-empty-state">
                        @if (!HasActiveFilters)
                        {
                            <p>No webhooks registered. Click "Register New Webhook" to create your first webhook.</p>
                        }
                        else
                        {
                            <p>No webhooks found for the selected filter. Adjust your filter settings or register a new webhook.</p>
                        }
                    </div>
                }
                else
                {
                    <div class="epi-table-container">
                        <table class="epi-table">
                            <thead>
                                <tr>
                                    <th>URL</th>
                                    <th>Method</th>
                                    <th>Status</th>
                                    <th>Topics</th>
                                    <th>Filters</th>
                                    <th class="epi-align-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var webhook in Webhooks)
                                {
                                    <tr>
                                        <td>
                                            <span class="epi-url-text" title="@webhook.Url">@TruncateUrl(webhook.Url)</span>
                                        </td>
                                        <td>
                                            <span class="epi-method-badge epi-method-badge--@webhook.Method?.ToLowerInvariant()">@webhook.Method</span>
                                        </td>
                                        <td>
                                            <span class="epi-status-badge @GetStatusBadgeClass(webhook.Disabled)">@GetStatusText(webhook.Disabled)</span>
                                        </td>
                                        <td>
                                            <span class="epi-topics-text" title="@FormatTopics(webhook.Topics)">@FormatTopics(webhook.Topics)</span>
                                        </td>
                                        <td>
                                            <span class="epi-filters-text" title="@FormatFilters(webhook.Filters)">@FormatFilters(webhook.Filters)</span>
                                        </td>
                                        <td class="epi-align-right">
                                            <div class="epi-button-group">
                                                <button @onclick="() => ShowWebhookDetails(webhook)"
                                                        class="epi-button epi-button--info epi-button--small"
                                                        title="View webhook details">
                                                    View
                                                </button>
                                                <button @onclick="() => StartEdit(webhook)"
                                                        class="epi-button epi-button--secondary epi-button--small"
                                                        title="Edit webhook">
                                                    Edit
                                                </button>
                                                <button @onclick="@(async () => { if (await ConfirmDelete()) await DeleteWebhook(webhook.Id); })"
                                                        class="epi-button epi-button--danger epi-button--small"
                                                        title="Delete webhook">
                                                    Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (TotalPages > 1)
                    {
                        <div class="epi-pagination">
                            <div class="epi-pagination-info">
                                Showing @((CurrentPage - 1) * PageSize + 1) to @Math.Min(CurrentPage * PageSize, TotalItems) of @TotalItems webhooks
                            </div>
                            <div class="epi-pagination-controls">
                                <button @onclick="GoToPreviousPage"
                                        class="epi-button epi-button--secondary epi-button--small"
                                        disabled="@(CurrentPage == 1)">
                                    Previous
                                </button>

                                @for (int i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                                {
                                    var pageNumber = i;
                                    <button @onclick="() => GoToPage(pageNumber)"
                                            class="epi-button epi-button--small @(CurrentPage == pageNumber ? "epi-button--primary" : "epi-button--secondary")">
                                        @pageNumber
                                    </button>
                                }

                                <button @onclick="GoToNextPage"
                                        class="epi-button epi-button--secondary epi-button--small"
                                        disabled="@(CurrentPage == TotalPages)">
                                    Next
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }

    @if (ShowDetails && SelectedWebhook != null)
    {
        <div class="epi-modal-overlay" @onclick="CloseDetails">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Webhook Details</h2>
                    <button type="button" @onclick="CloseDetails" class="epi-modal-close" aria-label="Close">Ã—</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-detail-section">
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">ID:</span>
                            <span class="epi-detail-value epi-detail-value--mono">@(SelectedWebhook.Id ?? "N/A")</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Status:</span>
                            <span class="epi-status-badge @GetStatusBadgeClass(SelectedWebhook.Disabled)">@GetStatusText(SelectedWebhook.Disabled)</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">HTTP Method:</span>
                            <span class="epi-method-badge epi-method-badge--@SelectedWebhook.Method?.ToLowerInvariant()">@SelectedWebhook.Method</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">URL:</span>
                            <span class="epi-detail-value epi-detail-value--mono epi-detail-value--wrap">@(SelectedWebhook.Url ?? "N/A")</span>
                        </div>
                    </div>

                    <div class="epi-detail-section">
                        <h3 class="epi-h3">Event Topics</h3>
                        @if (SelectedWebhook.Topics.Any() && !(SelectedWebhook.Topics.Count == 1 && SelectedWebhook.Topics[0] == "*.*"))
                        {
                            <div class="epi-detail-topics">
                                @foreach (var topic in SelectedWebhook.Topics)
                                {
                                    <div class="epi-detail-topic">
                                        <span class="epi-topic-badge">@topic</span>
                                        <span class="epi-topic-description">@GetTopicDescription(topic)</span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="epi-detail-empty">All events (*.*)</p>
                        }
                    </div>

                    <div class="epi-detail-section">
                        <h3 class="epi-h3">Filters</h3>
                        @if (SelectedWebhook.Filters.Any())
                        {
                            <div class="epi-detail-filters">
                                @foreach (var filter in SelectedWebhook.Filters)
                                {
                                    <div class="epi-detail-filter">
                                        <code>@filter.Field</code>
                                        <span class="epi-filter-operator">@filter.Operator</span>
                                        <code>@filter.Value</code>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="epi-detail-empty">No filters configured</p>
                        }
                    </div>

                    <div class="epi-detail-section">
