@using Microsoft.AspNetCore.Components
@using OptiGraphExtensions.Entities
@using OptiGraphExtensions.Features.CustomData
@using OptiGraphExtensions.Features.CustomData.Models
@inherits CustomDataManagementComponentBase

<div class="epi-contentArea">
    <div class="epi-contentAreaHeader">
        <h1 class="epi-h1">Custom Data Management</h1>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--danger">
            <div class="epi-notificationbar-text">@ErrorMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">×</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--success">
            <div class="epi-notificationbar-text">@SuccessMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">×</button>
        </div>
    }

    @* Full Sync Warning Modal *@
    @if (ShowFullSyncWarning)
    {
        <div class="epi-modal-overlay" @onclick="CancelFullSyncWarning">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Warning: Full Sync</h2>
                    <button type="button" @onclick="CancelFullSyncWarning" class="epi-modal-close"
                        aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-warning-box">
                        <strong>Warning:</strong> Full sync will <strong>DELETE ALL EXISTING DATA</strong> in this source.
                        This action cannot be undone.
                    </div>
                    <p style="margin-top: 16px;">Are you sure you want to proceed?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary"
                        @onclick="CancelFullSyncWarning">Cancel</button>
                    <button type="button" class="epi-button epi-button--danger"
                        @onclick="@(async () => { ConfirmFullSyncWarning(); await SaveSchemaFullSync(); })">Yes, Delete Data
                        and Sync</button>
                </div>
            </div>
        </div>
    }

    @* Delete Source Confirmation Modal *@
    @if (ShowDeleteConfirmation)
    {
        <div class="epi-modal-overlay" @onclick="CancelDeleteConfirmation">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Delete Source</h2>
                    <button type="button" @onclick="CancelDeleteConfirmation" class="epi-modal-close"
                        aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-warning-box">
                        <strong>Warning:</strong> This will permanently delete the source
                        <strong>"@SourceIdToDelete"</strong> and all associated data from Optimizely Graph. This action
                        cannot be undone.
                    </div>
                    <p style="margin-top: 16px;">Are you sure you want to delete this source?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary" @onclick="CancelDeleteConfirmation"
                        disabled="@IsDeleting">Cancel</button>
                    <button type="button" class="epi-button epi-button--danger" @onclick="ConfirmDeleteSource"
                        disabled="@IsDeleting">
                        @if (IsDeleting)
                        {
                            <span class="epi-loader-small"></span>
                        }
                        Yes, Delete Source
                    </button>
                </div>
            </div>
        </div>
    }

    @* Clear Data Confirmation Modal *@
    @if (ShowClearDataConfirmation)
    {
        <div class="epi-modal-overlay" @onclick="CancelClearDataConfirmation">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Clear All Data</h2>
                    <button type="button" @onclick="CancelClearDataConfirmation" class="epi-modal-close"
                        aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-warning-box">
                        <strong>Warning:</strong> This will clear all data items from source
                        <strong>"@CurrentSourceId"</strong> in Optimizely Graph. This action cannot be undone.
                    </div>
                    <p style="margin-top: 16px;">Are you sure you want to clear all data?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary" @onclick="CancelClearDataConfirmation"
                        disabled="@IsClearingData">Cancel</button>
                    <button type="button" class="epi-button epi-button--danger" @onclick="ConfirmClearAllData"
                        disabled="@IsClearingData">
                        @if (IsClearingData)
                        {
                            <span class="epi-loader-small"></span>
                        }
                        Yes, Clear All Data
                    </button>
                </div>
            </div>
        </div>
    }

    @* Import Confirmation Modal *@
    @if (ShowImportConfirmation)
    {
        <div class="epi-modal-overlay" @onclick="CancelImportConfirmation">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Confirm Import</h2>
                    <button type="button" @onclick="CancelImportConfirmation" class="epi-modal-close"
                        aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-info-box">
                        <p><strong>Ready to import data to Optimizely Graph.</strong></p>
                        <p>Items to import: <strong>@ImportPreviewItems.Count</strong></p>
                        <p>Target source: <strong>@CurrentSourceId</strong></p>
                        <p>Content type: <strong>@SelectedContentType?.Name</strong></p>
                    </div>
                    @if (ImportPreviewWarnings.Any())
                    {
                        <div class="epi-warning-box" style="margin-top: 16px;">
                            <strong>Note:</strong> There were @ImportPreviewWarnings.Count warning(s) during preview. Check the
                            preview results for details.
                        </div>
                    }
                    <p style="margin-top: 16px;">Do you want to proceed with the import?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary" @onclick="CancelImportConfirmation"
                        disabled="@IsImporting">Cancel</button>
                    <button type="button" class="epi-button epi-button--primary" @onclick="ExecuteImport"
                        disabled="@IsImporting">
                        @if (IsImporting)
                        {
                            <span class="epi-loader-small"></span>
                        }
                        Yes, Import Data
                    </button>
                </div>
            </div>
        </div>
    }

    @* Delete Import Configuration Confirmation Modal *@
    @if (ShowDeleteImportConfigConfirmation && ImportConfigToDelete != null)
    {
        <div class="epi-modal-overlay" @onclick="CancelDeleteImportConfig">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Delete Import Configuration</h2>
                    <button type="button" @onclick="CancelDeleteImportConfig" class="epi-modal-close"
                        aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <p>Are you sure you want to delete the import configuration
                        "<strong>@ImportConfigToDelete.Name</strong>"?</p>
                    <p style="margin-top: 8px; color: #666;">This action cannot be undone. The configuration will be
                        permanently removed.</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary"
                        @onclick="CancelDeleteImportConfig">Cancel</button>
                    <button type="button" class="epi-button epi-button--danger" @onclick="ConfirmDeleteImportConfiguration">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    }

    @* Run Import Configuration Confirmation Modal *@
    @if (ShowRunImportConfigConfirmation && ImportConfigToRun != null)
    {
        <div class="epi-modal-overlay" @onclick="CancelRunImportConfig">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Run Import</h2>
                    <button type="button" @onclick="CancelRunImportConfig" class="epi-modal-close"
                        aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-info-box">
                        <p><strong>Ready to run import: "@ImportConfigToRun.Name"</strong></p>
                        <p>API URL: <strong>@ImportConfigToRun.ApiUrl</strong></p>
                        <p>Target content type: <strong>@ImportConfigToRun.TargetContentType</strong></p>
                        @if (ImportConfigToRun.LastImportAt.HasValue)
                        {
                            <p>Last import: <strong>@ImportConfigToRun.LastImportAt.Value.ToString("g")</strong>
                                (@(ImportConfigToRun.LastImportCount ?? 0) items)</p>
                        }
                    </div>
                    <p style="margin-top: 16px;">Do you want to proceed with the import?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary"
                        @onclick="CancelRunImportConfig">Cancel</button>
                    <button type="button" class="epi-button epi-button--primary" @onclick="ConfirmRunImportConfiguration">
                        Run Import
                    </button>
                </div>
            </div>
        </div>
    }

    @* Execution History Modal *@
    @if (ShowHistoryModal)
    {
        <div class="epi-modal-overlay" @onclick="CloseHistoryModal">
            <div class="epi-modal epi-modal--large" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Execution History: @HistoryConfigName</h2>
                    <button type="button" @onclick="CloseHistoryModal" class="epi-modal-close" aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    @if (IsLoadingHistory)
                    {
                        <div class="epi-loading">
                            <div class="epi-loader"></div>
                            <p>Loading execution history...</p>
                        </div>
                    }
                    else
                    {
                        @* Statistics Summary *@
                        @if (ExecutionStats != null && ExecutionStats.TotalExecutions > 0)
                        {
                            <div class="epi-stats-grid">
                                <div class="epi-stat-card">
                                    <div class="epi-stat-value">@ExecutionStats.TotalExecutions</div>
                                    <div class="epi-stat-label">Total Runs (30 days)</div>
                                </div>
                                <div class="epi-stat-card epi-stat-card--success">
                                    <div class="epi-stat-value">@ExecutionStats.SuccessfulExecutions</div>
                                    <div class="epi-stat-label">Successful</div>
                                </div>
                                <div class="epi-stat-card epi-stat-card--danger">
                                    <div class="epi-stat-value">@ExecutionStats.FailedExecutions</div>
                                    <div class="epi-stat-label">Failed</div>
                                </div>
                                <div class="epi-stat-card">
                                    <div class="epi-stat-value">@FormatDuration(ExecutionStats.AverageDuration)</div>
                                    <div class="epi-stat-label">Avg Duration</div>
                                </div>
                            </div>
                        }

                        @* History Table *@
                        @if (ExecutionHistory.Any())
                        {
                            <div class="epi-table-container" style="max-height: 400px; overflow-y: auto;">
                                <table class="epi-table epi-table--compact">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Items</th>
                                            <th>Duration</th>
                                            <th>Type</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var history in ExecutionHistory)
                                        {
                                            <tr>
                                                <td>@history.ExecutedAt.ToString("g")</td>
                                                <td>
                                                    <span class="@GetStatusBadgeClass(history.Success)">
                                                        @(history.Success ? "Success" : "Failed")
                                                    </span>
                                                </td>
                                                <td>@history.ItemsImported / @history.ItemsReceived</td>
                                                <td>@FormatDuration(TimeSpan.FromTicks(history.DurationTicks))</td>
                                                <td>
                                                    @if (history.WasRetry)
                                                    {
                                                        <span class="epi-badge epi-badge--warning">Retry #@history.RetryAttempt</span>
                                                    }
                                                    else if (history.WasScheduled)
                                                    {
                                                        <span class="epi-badge epi-badge--info">Scheduled</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="epi-badge epi-badge--neutral">Manual</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(history.ErrorMessage))
                                                    {
                                                        <span title="@history.ErrorMessage" class="epi-text-error">
                                                            @(history.ErrorMessage.Length > 50 ? history.ErrorMessage.Substring(0, 50) + "..." : history.ErrorMessage)
                                                        </span>
                                                    }
                                                    @if (history.ItemsSkipped > 0)
                                                    {
                                                        <span class="epi-text-warning">@history.ItemsSkipped skipped</span>
                                                    }
                                                    @if (history.ItemsFailed > 0)
                                                    {
                                                        <span class="epi-text-error">@history.ItemsFailed failed</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="epi-empty-state">
                                <p>No execution history found for this configuration.</p>
                            </div>
                        }
                    }
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary" @onclick="CloseHistoryModal">Close</button>
                </div>
            </div>
        </div>
    }

    @* API Schema Import Modal *@
    @if (ShowApiSchemaImport)
    {
        <div class="epi-modal-overlay" @onclick="CloseApiSchemaImportDialog">
            <div class="epi-modal epi-modal--large" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Import Schema from API</h2>
                    <button type="button" @onclick="CloseApiSchemaImportDialog" class="epi-modal-close"
                        aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <p class="epi-help-text">
                        Fetch JSON from an external API and automatically infer a content type schema from the response.
                    </p>

                    <div class="epi-form-field">
                        <label class="epi-label">API URL *</label>
                        <input type="url" class="epi-textbox" @bind="ApiSchemaUrl"
                            placeholder="https://api.example.com/products" />
                        <span class="epi-field-hint">Enter the URL of the API endpoint that returns JSON data</span>
                    </div>

                    <div class="epi-form-field">
                        <label class="epi-label">Content Type Name *</label>
                        <input type="text" class="epi-textbox" @bind="ApiSchemaContentTypeName" placeholder="Product" />
                        <span class="epi-field-hint">Name for the content type to be created (will be converted to
                            PascalCase)</span>
                    </div>

                    <div class="epi-form-field">
                        <label class="epi-label">JSON Path (optional)</label>
                        <input type="text" class="epi-textbox" @bind="ApiSchemaJsonPath" placeholder="data.items" />
                        <span class="epi-field-hint">Path to the array of items in the response (e.g., "data.items",
                            "results", "records")</span>
                    </div>

                    <div class="epi-form-field">
                        <label class="epi-label">Custom Headers (optional)</label>
                        <div class="epi-headers-list">
                            @foreach (var header in ApiSchemaHeaders)
                            {
                                <div class="epi-header-item">
                                    <span class="epi-header-key">@header.Key:</span>
                                    <span class="epi-header-value">@(header.Key.ToLower().Contains("auth") ||
                                                                        header.Key.ToLower().Contains("key") ? "***" : header.Value)</span>
                                    <button type="button" class="epi-button epi-button--danger epi-button--small"
                                        @onclick="@(() => RemoveApiHeader(header.Key))">Remove</button>
                                </div>
                            }
                        </div>
                        <div class="epi-header-add">
                            <input type="text" class="epi-textbox epi-textbox--small" @bind="NewApiHeaderKey"
                                placeholder="Header name" />
                            <input type="text" class="epi-textbox epi-textbox--small" @bind="NewApiHeaderValue"
                                placeholder="Header value" />
                            <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                @onclick="AddApiHeader">Add Header</button>
                        </div>
                        <span class="epi-field-hint">Add headers like Authorization, API-Key, etc.</span>
                    </div>

                    @if (!ShowApiSchemaPreview)
                    {
                        <div class="epi-form-actions" style="margin-top: 16px;">
                            <button type="button" class="epi-button epi-button--primary" @onclick="InferSchemaFromApi"
                                disabled="@IsInferringSchema">
                                @if (IsInferringSchema)
                                {
                                    <span class="epi-loader-small"></span>
                                }
                                Fetch & Infer Schema
                            </button>
                        </div>
                    }

                    @if (ShowApiSchemaPreview && ApiSchemaInferenceResult?.ContentType != null)
                    {
                        <div class="epi-schema-preview">
                            <h3 class="epi-h3">Inferred Schema Preview</h3>

                            <div class="epi-form-field">
                                <label class="epi-label">Content Type Name</label>
                                <input type="text" class="epi-textbox" @bind="ApiSchemaInferenceResult.ContentType.Name" />
                            </div>

                            <div class="epi-form-field">
                                <label class="epi-label">Properties (@ApiSchemaInferenceResult.ContentType.Properties.Count
                                    found)</label>
                                @if (ApiSchemaInferenceResult.ContentType.Properties.Any())
                                {
                                    <div class="epi-table-container">
                                        <table class="epi-table epi-table--compact">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Type</th>
                                                    <th>Searchable</th>
                                                    <th class="epi-align-right">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var prop in ApiSchemaInferenceResult.ContentType.Properties)
                                                {
                                                    <tr>
                                                        <td><input type="text" class="epi-textbox epi-textbox--small"
                                                                @bind="prop.Name" /></td>
                                                        <td>
                                                            <select class="epi-select epi-select--small" @bind="prop.Type">
                                                                @foreach (var type in AvailablePropertyTypes)
                                                                {
                                                                    <option value="@type">@type</option>
                                                                }
                                                            </select>
                                                        </td>
                                                        <td class="epi-align-center">
                                                            <input type="checkbox" checked="@prop.IsSearchable"
                                                                @onchange="@(() => ToggleApiPropertySearchable(prop))" />
                                                        </td>
                                                        <td class="epi-align-right">
                                                            <button type="button"
                                                                class="epi-button epi-button--danger epi-button--small"
                                                                @onclick="@(() => RemoveApiInferredProperty(prop))">Remove</button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>

                            @if (ApiSchemaInferenceResult.SampleData?.Any() == true)
                            {
                                <div class="epi-form-field">
                                    <label class="epi-label">Sample Data (@ApiSchemaInferenceResult.SampleData.Count items)</label>
                                    <pre
                                        class="epi-code-preview">@System.Text.Json.JsonSerializer.Serialize(ApiSchemaInferenceResult.SampleData.Take(3), new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary"
                        @onclick="CloseApiSchemaImportDialog">Cancel</button>
                    @if (ShowApiSchemaPreview && ApiSchemaInferenceResult?.ContentType != null)
                    {
                        <button type="button" class="epi-button epi-button--secondary" @onclick="InferSchemaFromApi"
                            disabled="@IsInferringSchema">
                            @if (IsInferringSchema)
                            {
                                <span class="epi-loader-small"></span>
                            }
                            Re-fetch
                        </button>
                        <button type="button" class="epi-button epi-button--primary" @onclick="ApplyApiSchemaToContentType">
                            Apply to Schema
                        </button>
                    }
                </div>
            </div>
        </div>
    }

    @* Mode: List *@
    @if (CurrentMode == "list")
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">Custom Data Sources</h2>
                <div class="epi-header-actions">
                    <span class="epi-badge">@AllSources.Count total sources</span>
                    <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="LoadSources"
                        disabled="@IsLoading">
                        Refresh
                    </button>
                    <button type="button" class="epi-button epi-button--primary epi-button--small"
                        @onclick="ShowCreateSchemaForm" disabled="@IsLoading">
                        New Source
                    </button>
                </div>
            </div>
            <div class="epi-content">
                @if (IsLoading)
                {
                    <div class="epi-loading">
                        <div class="epi-loader"></div>
                        <p>Loading sources from Optimizely Graph...</p>
                    </div>
                }
                else
                {
                    <div class="epi-info-box">
                        <p><strong>Custom Data Sources</strong> allow you to define your own GraphQL schemas and sync external
                            data to Optimizely Graph.</p>
                        <p style="margin-bottom: 0;"><strong>Note:</strong> Source IDs must be 1-4 lowercase letters and/or
                            numbers only.</p>
                    </div>

                    @if (AllSources.Any())
                    {
                        <div class="epi-table-container">
                            <table class="epi-table">
                                <thead>
                                    <tr>
                                        <th>Source ID</th>
                                        <th>Label</th>
                                        <th>Languages</th>
                                        <th>Content Types</th>
                                        <th class="epi-align-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var source in PaginationResult?.Items ?? AllSources)
                                    {
                                        <tr>
                                            <td><code class="epi-code">@source.SourceId</code></td>
                                            <td>@(source.Label ?? "-")</td>
                                            <td>@source.LanguagesDisplay</td>
                                            <td>@source.ContentTypeCount type(s)</td>
                                            <td class="epi-align-right">
                                                <div class="epi-button-group">
                                                    <button type="button" class="epi-button epi-button--info epi-button--small"
                                                        @onclick="@(() => ShowEditSchemaForm(source.SourceId))" title="Edit Schema">
                                                        Schema
                                                    </button>
                                                    <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                                        @onclick="@(() => ShowDataManagement(source.SourceId))" title="Manage Data">
                                                        Data
                                                    </button>
                                                    <button type="button" class="epi-button epi-button--danger epi-button--small"
                                                        @onclick="@(() => ShowDeleteConfirmationDialog(source.SourceId))"
                                                        title="Delete Source">
                                                        Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (TotalPages > 1)
                        {
                            <div class="epi-pagination">
                                <div class="epi-pagination-info">
                                    Showing @((CurrentPage - 1) * PageSize + 1) to @Math.Min(CurrentPage * PageSize, AllSources.Count)
                                    of @AllSources.Count sources
                                </div>
                                <div class="epi-pagination-controls">
                                    <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                        disabled="@(CurrentPage <= 1)" @onclick="GoToPreviousPage">
                                        Previous
                                    </button>
                                    @for (int i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                                    {
                                        var pageNumber = i;
                                        <button type="button" @onclick="@(() => GoToPage(pageNumber))"
                                            class="epi-button epi-button--small @(CurrentPage == pageNumber ? "epi-button--primary" : "epi-button--secondary")">
                                            @pageNumber
                                        </button>
                                    }
                                    <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                        disabled="@(CurrentPage >= TotalPages)" @onclick="GoToNextPage">
                                        Next
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="epi-empty-state">
                            <p>No custom data sources found. Click "New Source" to create your first custom data source.</p>
                        </div>
                    }
                }
            </div>
        </div>
    }

    @* Mode: Schema Editor *@
    @if (CurrentMode == "schema")
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">@(IsEditingSchema ? $"Edit Schema: {CurrentSchema.SourceId}" : "Create New Schema")</h2>
                <div class="epi-header-actions">
                    <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="BackToList">
                        Back to List
                    </button>
                </div>
            </div>
            <div class="epi-form">
                @* Editor Mode Toggle *@
                    <div class="epi-tabs">
                    <button type="button" class="epi-tab @(EditorMode == "visual" ? "epi-tab--active" : "")"
                        @onclick="SwitchToVisualMode">Visual Builder</button>
                    <button type="button" class="epi-tab @(EditorMode == "raw" ? "epi-tab--active" : "")"
                        @onclick="SwitchToRawMode">Raw JSON</button>
                </div>

                @if (EditorMode == "visual")
                {
                    <div class="epi-form-section">
                        <h3 class="epi-h3">Source Configuration</h3>
                        <p class="epi-help-text">Configure the basic properties of your custom data source.</p>

                        <div class="epi-form-row">
                            <div class="epi-form-field epi-form-field--source-id">
                                <label for="sourceId" class="epi-label">Source ID *</label>
                                <input id="sourceId" type="text" class="epi-textbox" @bind="CurrentSchema.SourceId"
