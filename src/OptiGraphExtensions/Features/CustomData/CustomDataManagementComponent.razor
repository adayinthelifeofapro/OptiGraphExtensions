                    </div>

                    <div class="epi-form-section">
                        <div class="epi-section-header">
                            <h3 class="epi-h3">Content Types</h3>
                            <div class="epi-button-group">
                                <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                    @onclick="AddContentType">Add Content Type</button>
                                <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                    @onclick="ShowApiSchemaImportDialog" title="Infer schema from an external API">Import from
                                    API</button>
                            </div>
                        </div>
                        <p class="epi-help-text">Define the content types and their properties that will be available in your
                            custom data source.</p>

                        @foreach (var contentType in CurrentSchema.ContentTypes)
                        {
                            <div class="epi-content-type-card">
                                <div class="epi-content-type-header">
                                    <div class="epi-form-row">
                                        <div class="epi-form-field">
                                            <label class="epi-label">Type Name *</label>
                                            <input type="text" class="epi-textbox" @bind="contentType.Name"
                                                placeholder="e.g., Product" />
                                        </div>
                                        <div class="epi-form-field">
                                            <label class="epi-label">Label</label>
                                            <input type="text" class="epi-textbox" @bind="contentType.Label"
                                                placeholder="Human-readable label" />
                                        </div>
                                    </div>
                                    <button type="button" class="epi-button epi-button--danger epi-button--small"
                                        @onclick="@(() => RemoveContentType(contentType))">Remove Type</button>
                                </div>

                                <div class="epi-properties-section">
                                    <h4 class="epi-h4">Properties</h4>
                                    @if (contentType.Properties.Any())
                                    {
                                        <div class="epi-table-container">
                                            <table class="epi-table epi-table--compact">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Type</th>
                                                        <th>Searchable</th>
                                                        <th>Required</th>
                                                        <th class="epi-align-right">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var property in contentType.Properties)
                                                    {
                                                        <tr>
                                                            <td><input type="text" class="epi-textbox epi-textbox--small"
                                                                    @bind="property.Name" placeholder="Property name" /></td>
                                                            <td>
                                                                <select class="epi-select epi-select--small" @bind="property.Type">
                                                                    @foreach (var type in AvailablePropertyTypes)
                                                                    {
                                                                        <option value="@type">@type</option>
                                                                    }
                                                                </select>
                                                            </td>
                                                            <td class="epi-align-center"><input type="checkbox"
                                                                    @bind="property.IsSearchable" /></td>
                                                            <td class="epi-align-center"><input type="checkbox"
                                                                    @bind="property.IsRequired" /></td>
                                                            <td class="epi-align-right">
                                                                <button type="button"
                                                                    class="epi-button epi-button--danger epi-button--small"
                                                                    @onclick="@(() => RemoveProperty(contentType, property))">Remove</button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                        @onclick="@(() => AddProperty(contentType))">Add Property</button>
                                </div>
                            </div>
                        }

                        @if (!CurrentSchema.ContentTypes.Any())
                        {
                            <div class="epi-empty-state epi-empty-state--compact">
                                <p>No content types defined. Click "Add Content Type" to define your schema.</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="epi-form-section">
                        <h3 class="epi-h3">Schema JSON</h3>
                        <p class="epi-help-text">Edit the schema definition directly in JSON format.</p>
                        <textarea class="epi-textarea epi-textarea--code" rows="20" @bind="RawSchemaJson"></textarea>
                    </div>
                }

                <div class="epi-form-actions">
                    @if (IsEditingSchema)
                    {
                        <button type="button" class="epi-button epi-button--primary" @onclick="SaveSchemaPartialSync"
                            disabled="@IsSyncing">
                            @if (IsSyncing)
                            {
                                <span class="epi-loader-small"></span>
                            }
                            Save (Partial Sync)
                        </button>
                    }
                    <button type="button"
                        class="epi-button @(IsEditingSchema ? "epi-button--warning" : "epi-button--primary")"
                        @onclick="SaveSchemaFullSync" disabled="@IsSyncing">
                        @if (IsSyncing)
                        {
                            <span class="epi-loader-small"></span>
                        }
                        @(IsEditingSchema ? "Save (Full Sync - Deletes Data)" : "Create Schema")
                    </button>
                    <button type="button" class="epi-button epi-button--secondary" @onclick="BackToList"
                        disabled="@IsSyncing">
                        Close
                    </button>
                </div>
            </div>
        </div>
    }

    @* Mode: Data Management *@
    @if (CurrentMode == "data")
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">Manage Data: @CurrentSourceId</h2>
                <div class="epi-header-actions">
                    <span class="epi-badge">@DataItems.Count items</span>
                    <button type="button" class="epi-button epi-button--info epi-button--small"
                        @onclick="ToggleManualSection">
                        @(ShowManualSection ? "Hide Manual" : "Manual")
                    </button>
                    <button type="button" class="epi-button epi-button--info epi-button--small"
                        @onclick="ToggleImportSection">
                        @(ShowImportSection ? "Hide Import" : "Import")
                    </button>
                    <button type="button" class="epi-button epi-button--danger epi-button--small"
                        @onclick="ShowClearDataConfirmationDialog" disabled="@(IsSyncing || IsLoadingSchema)">
                        Clear All Data
                    </button>
                    <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="BackToList">
                        Back to List
                    </button>
                </div>
            </div>
            <div class="epi-form">
                @* Default state - show explanatory text when no section is active *@
                @if (!ShowImportSection && !ShowManualSection)
                {
                    <div class="epi-info-section">
                        <h3 class="epi-h3">Data Management Options</h3>
                        <p class="epi-help-text">Choose how you want to manage data for this custom data source:</p>

                        <div class="epi-options-grid">
                            <div class="epi-option-card">
                                <h4 class="epi-h4">Manual Data Entry</h4>
                                <p>Create, edit, and delete individual data items using a visual form builder or raw NdJSON editor. Ideal for small datasets or making quick updates.</p>
                                <p><strong>Click the "Manual" button</strong> in the header to get started.</p>
                            </div>

                            <div class="epi-option-card">
                                <h4 class="epi-h4">External Data Import</h4>
                                <p>Import data from external REST APIs with configurable field mappings. Supports authentication, scheduling, and automatic retries.</p>
                                <p><strong>Click the "Import" button</strong> in the header to configure imports.</p>
                            </div>
                        </div>

                        <div class="epi-additional-actions">
                            <h4 class="epi-h4">Other Actions</h4>
                            <ul class="epi-action-list">
                                <li><strong>Clear All Data:</strong> Removes all data items from this source in Optimizely Graph. Use with caution.</li>
                                <li><strong>Back to List:</strong> Return to the list of all custom data sources.</li>
                            </ul>
                        </div>
                    </div>
                }

                @* Import Section *@
                @if (ShowImportSection)
                {
                    <div class="epi-form-section epi-import-section">
                        <h3 class="epi-h3">External Data Import</h3>
                        <p class="epi-help-text">Import data from external APIs and sync to Optimizely Graph.</p>

                        @if (EditingImportConfig == null)
                        {
                            @* Saved Configurations List *@
                                        <div class="epi-import-configs">
                                <div class="epi-section-header">
                                    <h4 class="epi-h4">Saved Configurations</h4>
                                    <button type="button" class="epi-button epi-button--primary epi-button--small"
                                        @onclick="ShowNewImportConfigForm">
                                        New Import
                                    </button>
                                </div>

                                @if (ImportConfigurations.Any())
                                {
                                    <div class="epi-table-container">
                                        <table class="epi-table epi-table--compact">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Schedule</th>
                                                    <th>Status</th>
                                                    <th>Last Import</th>
                                                    <th class="epi-align-right">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var config in ImportConfigurations)
                                                {
                                                    <tr>
                                                        <td>
                                                            <strong>@config.Name</strong>
                                                            @if (!string.IsNullOrEmpty(config.Description))
                                                            {
                                                                <br />
                                                                <small class="epi-muted">@config.Description</small>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (config.IsScheduled)
                                                            {
                                                                <span class="epi-badge epi-badge--info">@config.ScheduleDescription</span>
                                                                @if (config.NextScheduledRunAt.HasValue)
                                                                {
                                                                    <br />
                                                                    <small class="epi-muted">Next: @config.NextScheduledRunAt.Value.ToString("g")</small>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <span class="epi-muted">Manual</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <span class="@GetStatusBadgeClass(config.LastImportSuccess)">
                                                                @GetStatusText(config.LastImportSuccess)
                                                            </span>
                                                            @if (config.ConsecutiveFailures > 0)
                                                            {
                                                                <br />
                                                                <small class="epi-text-warning">@config.ConsecutiveFailures failures</small>
                                                            }
                                                            @if (config.HasPendingRetry)
                                                            {
                                                                <br />
                                                                <small class="epi-text-info">Retry at @config.NextRetryAt?.ToString("HH:mm")</small>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (config.LastImportAt.HasValue)
                                                            {
                                                                <span>@config.LastImportAt.Value.ToString("g") (@config.LastImportCount items)</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="epi-muted">Never</span>
                                                            }
                                                        </td>
                                                        <td class="epi-align-right">
                                                            <div class="epi-button-group">
                                                                <button type="button"
                                                                    class="epi-button epi-button--primary epi-button--small"
                                                                    @onclick="@(() => ShowRunImportConfigDialog(config))" disabled="@IsImporting">
                                                                    Run
                                                                </button>
                                                                <button type="button"
                                                                    class="epi-button epi-button--secondary epi-button--small"
                                                                    @onclick="@(() => EditImportConfig(config))">
                                                                    Edit
                                                                </button>
                                                                <button type="button"
                                                                    class="epi-button epi-button--info epi-button--small"
                                                                    @onclick="@(() => ShowExecutionHistory(config))"
                                                                    title="View execution history">
                                                                    History
                                                                </button>
                                                                <button type="button"
                                                                    class="epi-button epi-button--danger epi-button--small"
                                                                    @onclick="@(() => ShowDeleteImportConfigDialog(config))">
                                                                    Delete
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="epi-empty-state epi-empty-state--compact">
                                        <p>No saved import configurations. Click "New Import" to create one.</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            @* Import Configuration Form *@
                                        <div class="epi-import-form">
                                <h4 class="epi-h4">@(EditingImportConfig.Id.HasValue ? "Edit Import Configuration" : "New Import Configuration")</h4>

                                @* Basic Info *@
                                            <div class="epi-form-row">
                                    <div class="epi-form-field">
                                        <label class="epi-label">Name *</label>
                                        <input type="text" class="epi-textbox" @bind="EditingImportConfig.Name"
                                            placeholder="e.g., Product API Import" />
                                    </div>
                                    <div class="epi-form-field">
                                        <label class="epi-label">Description</label>
                                        <input type="text" class="epi-textbox" @bind="EditingImportConfig.Description"
                                            placeholder="Optional description" />
                                    </div>
                                </div>

                                @* API Settings *@
                                            <div class="epi-form-row">
                                    <div class="epi-form-field" style="flex: 2;">
                                        <label class="epi-label">API URL *</label>
                                        <input type="text" class="epi-textbox" name="import_api_url" autocomplete="off"
                                            @bind="EditingImportConfig.ApiUrl" placeholder="https://api.example.com/data" />
                                    </div>
                                    <div class="epi-form-field" style="flex: 0 0 150px;">
                                        <label class="epi-label">HTTP Method</label>
                                        <select class="epi-select" name="import_http_method" @bind="EditingImportConfig.HttpMethod">
                                            <option value="GET">GET</option>
                                            <option value="POST">POST</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="epi-form-row">
                                    <div class="epi-form-field">
                                        <label class="epi-label">JSON Path (optional)</label>
                                        <input type="text" class="epi-textbox" name="import_json_path" autocomplete="off"
                                            @bind="EditingImportConfig.JsonPath" placeholder="products" />
                                        <span class="epi-field-hint">Path to the data array within the response (e.g., "products",
                                            "data", "results", "items")</span>
                                    </div>
                                </div>

                                @* Authentication *@
                                            <div class="epi-form-subsection">
                                    <h5 class="epi-h5">Authentication</h5>
                                    <div class="epi-form-row">
                                        <div class="epi-form-field" style="flex: 0 0 200px;">
                                            <label class="epi-label">Auth Type</label>
                                            <select class="epi-select" @bind="EditingImportConfig.AuthType">
                                                <option value="@AuthenticationType.None">None</option>
                                                <option value="@AuthenticationType.ApiKey">API Key</option>
                                                <option value="@AuthenticationType.Basic">Basic Auth</option>
                                                <option value="@AuthenticationType.Bearer">Bearer Token</option>
                                            </select>
                                        </div>
                                        @if (EditingImportConfig.AuthType == AuthenticationType.ApiKey)
                                        {
                                            <div class="epi-form-field">
                                                <label class="epi-label">Header Name</label>
                                                <input type="text" class="epi-textbox" @bind="EditingImportConfig.AuthKeyOrUsername"
                                                    placeholder="X-API-Key" />
                                            </div>
                                            <div class="epi-form-field">
                                                <label class="epi-label">API Key</label>
                                                <input type="password" class="epi-textbox"
                                                    @bind="EditingImportConfig.AuthValueOrPassword" placeholder="Your API key" />
                                            </div>
                                        }
                                        @if (EditingImportConfig.AuthType == AuthenticationType.Basic)
                                        {
                                            <div class="epi-form-field">
                                                <label class="epi-label">Username</label>
                                                <input type="text" class="epi-textbox" @bind="EditingImportConfig.AuthKeyOrUsername"
                                                    placeholder="Username" />
                                            </div>
                                            <div class="epi-form-field">
                                                <label class="epi-label">Password</label>
                                                <input type="password" class="epi-textbox"
                                                    @bind="EditingImportConfig.AuthValueOrPassword" placeholder="Password" />
                                            </div>
                                        }
                                        @if (EditingImportConfig.AuthType == AuthenticationType.Bearer)
                                        {
                                            <div class="epi-form-field" style="flex: 2;">
                                                <label class="epi-label">Bearer Token</label>
                                                <input type="password" class="epi-textbox"
                                                    @bind="EditingImportConfig.AuthValueOrPassword" placeholder="Your bearer token" />
                                            </div>
                                        }
                                    </div>
                                </div>

                                @* Test Connection *@
                                            <div class="epi-form-actions epi-form-actions--inline">
                                    <button type="button" class="epi-button epi-button--secondary" @onclick="TestConnection"
                                        disabled="@IsTestingConnection">
                                        @if (IsTestingConnection)
                                        {
                                            <span class="epi-loader-small"></span>
                                        }
                                        Test Connection
                                    </button>
                                </div>

                                @if (TestConnectionResult != null)
                                {
                                    <div class="@(TestConnectionSuccess ? "epi-info-box epi-info-box--success" : "epi-warning-box")" style="margin-top: 12px;">
                                        <p><strong>@(TestConnectionSuccess ? "Success:" : "Error:")</strong> @TestConnectionResult</p>
                                        @if (!string.IsNullOrEmpty(TestConnectionSample))
                                        {
                                            <details>
                                                <summary>Sample Data (click to expand)</summary>
                                                <pre class="epi-json-body">@TestConnectionSample</pre>
                                            </details>
                                        }
                                    </div>
                                }

                                @* Field Mappings *@
                                <div class="epi-form-subsection">
                                    <div class="epi-section-header">
                                        <h5 class="epi-h5">Field Mappings</h5>
                                        <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                            @onclick="AddFieldMapping">
                                            Add Mapping
                                        </button>
                                    </div>
                                    <p class="epi-help-text">Map fields from the external API to your content type properties. Use
                                        dot notation for nested fields (e.g., "data.product.name").</p>

                                    @* ID Field Mapping (Required) *@
                                                <div class="epi-form-row epi-form-row--highlight">
                                        <div class="epi-form-field">
                                            <label class="epi-label">ID Field *</label>
                                            <input type="text" class="epi-textbox" @bind="EditingImportConfig.IdFieldMapping"
                                                placeholder="e.g., id or data.id" />
                                            <span class="epi-field-help">Required. Maps to the unique item ID.</span>
                                        </div>
                                        <div class="epi-form-field">
                                            <label class="epi-label">Language</label>
                                            <select class="epi-select" @bind="EditingImportConfig.LanguageRouting">
                                                @foreach (var lang in CurrentSchema.Languages)
                                                {
                                                    <option value="@lang">@lang</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    @* Property Mappings Table *@
                                                @if (EditingImportConfig.FieldMappings.Any())
                                    {
                                        <div class="epi-table-container">
                                            <table class="epi-table epi-table--compact">
                                                <thead>
                                                    <tr>
                                                        <th>Source Path</th>
                                                        <th>Target Property</th>
                                                        <th>Transformation</th>
                                                        <th>Default Value</th>
                                                        <th class="epi-align-right">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var mapping in EditingImportConfig.FieldMappings)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <input type="text" class="epi-textbox epi-textbox--small"
                                                                    @bind="mapping.SourcePath" placeholder="e.g., name" />
                                                            </td>
                                                            <td>
                                                                <select class="epi-select epi-select--small" @bind="mapping.TargetProperty">
                                                                    <option value="">-- Select --</option>
                                                                    @if (SelectedContentType != null)
                                                                    {
                                                                        @foreach (var prop in SelectedContentType.Properties)
                                                                        {
                                                                            <option value="@prop.Name">@prop.Name (@prop.Type)</option>
                                                                        }
                                                                    }
                                                                </select>
                                                            </td>
                                                            <td>
                                                                <select class="epi-select epi-select--small" @bind="mapping.Transformation">
                                                                    <option value="@FieldTransformation.None">None</option>
                                                                    <option value="@FieldTransformation.ToString">To String</option>
                                                                    <option value="@FieldTransformation.ToInt">To Int</option>
                                                                    <option value="@FieldTransformation.ToFloat">To Float</option>
                                                                    <option value="@FieldTransformation.ToBoolean">To Boolean</option>
                                                                    <option value="@FieldTransformation.ToDate">To Date</option>
                                                                    <option value="@FieldTransformation.ToDateTime">To DateTime</option>
                                                                </select>
                                                            </td>
                                                            <td>
                                                                <input type="text" class="epi-textbox epi-textbox--small"
                                                                    @bind="mapping.DefaultValue" placeholder="Optional" />
                                                            </td>
                                                            <td class="epi-align-right">
                                                                <button type="button"
                                                                    class="epi-button epi-button--danger epi-button--small"
                                                                    @onclick="@(() => RemoveFieldMapping(mapping))">
                                                                    Remove
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                </div>

                                @* Scheduling (Collapsible) *@
                                <details class="epi-collapsible">
                                    <summary>Scheduling (Optional)</summary>
                                    <div class="epi-form-subsection">
                                        <p class="epi-help-text">Configure automatic scheduled runs for this import configuration.
                                            The import will be executed by the "External Data Import" scheduled job.</p>

                                        <div class="epi-form-row">
                                            <div class="epi-form-field">
                                                <label class="epi-label">Schedule Frequency</label>
                                                <select class="epi-select" value="@EditingImportConfig.ScheduleFrequency"
                                                    @onchange="OnScheduleFrequencyChanged">
                                                    @foreach (var freq in ImportConfigurationModel.AvailableScheduleFrequencies)
                                                    {
                                                        <option value="@freq.Value">@freq.Label</option>
                                                    }
                                                </select>
                                            </div>

                                            @if (EditingImportConfig.ScheduleFrequency == ScheduleFrequency.Hourly)
                                            {
                                                <div class="epi-form-field">
                                                    <label class="epi-label">Every N Hours</label>
                                                    <input type="number" class="epi-textbox" min="1" max="24"
                                                        @bind="EditingImportConfig.ScheduleIntervalValue" />
                                                </div>
                                            }

                                            @if (EditingImportConfig.ScheduleFrequency == ScheduleFrequency.Daily ||
                                                EditingImportConfig.ScheduleFrequency == ScheduleFrequency.Weekly ||
                                                EditingImportConfig.ScheduleFrequency == ScheduleFrequency.Monthly)
                                            {
                                                <div class="epi-form-field">
                                                    <label class="epi-label">Time of Day</label>
                                                    <div class="epi-time-picker">
                                                        <select class="epi-select epi-select--small" value="@ScheduleHour"
                                                            @onchange="OnScheduleHourChanged">
                                                            @foreach (var hour in ImportConfigurationModel.AvailableHours)
                                                            {
                                                                <option value="@hour">@hour.ToString("00")</option>
                                                            }
                                                        </select>
                                                        <span>:</span>
                                                        <select class="epi-select epi-select--small" value="@ScheduleMinute"
                                                            @onchange="OnScheduleMinuteChanged">
                                                            @foreach (var minute in ImportConfigurationModel.AvailableMinutes)
