@using Microsoft.AspNetCore.Components
@using OptiGraphExtensions.Entities
@using OptiGraphExtensions.Features.CustomData
@using OptiGraphExtensions.Features.CustomData.Models
@inherits CustomDataManagementComponentBase

<div class="epi-contentArea">
    <div class="epi-contentAreaHeader">
        <h1 class="epi-h1">Custom Data Management</h1>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--danger">
            <div class="epi-notificationbar-text">@ErrorMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">×</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--success">
            <div class="epi-notificationbar-text">@SuccessMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">×</button>
        </div>
    }

    @* Full Sync Warning Modal *@
    @if (ShowFullSyncWarning)
    {
        <div class="epi-modal-overlay" @onclick="CancelFullSyncWarning">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Warning: Full Sync</h2>
                    <button type="button" @onclick="CancelFullSyncWarning" class="epi-modal-close" aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-warning-box">
                        <strong>Warning:</strong> Full sync will <strong>DELETE ALL EXISTING DATA</strong> in this source. This action cannot be undone.
                    </div>
                    <p style="margin-top: 16px;">Are you sure you want to proceed?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary" @onclick="CancelFullSyncWarning">Cancel</button>
                    <button type="button" class="epi-button epi-button--danger" @onclick="@(async () => { ConfirmFullSyncWarning(); await SaveSchemaFullSync(); })">Yes, Delete Data and Sync</button>
                </div>
            </div>
        </div>
    }

    @* Delete Source Confirmation Modal *@
    @if (ShowDeleteConfirmation)
    {
        <div class="epi-modal-overlay" @onclick="CancelDeleteConfirmation">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Delete Source</h2>
                    <button type="button" @onclick="CancelDeleteConfirmation" class="epi-modal-close" aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-warning-box">
                        <strong>Warning:</strong> This will permanently delete the source <strong>"@SourceIdToDelete"</strong> and all associated data from Optimizely Graph. This action cannot be undone.
                    </div>
                    <p style="margin-top: 16px;">Are you sure you want to delete this source?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary" @onclick="CancelDeleteConfirmation" disabled="@IsDeleting">Cancel</button>
                    <button type="button" class="epi-button epi-button--danger" @onclick="ConfirmDeleteSource" disabled="@IsDeleting">
                        @if (IsDeleting) { <span class="epi-loader-small"></span> }
                        Yes, Delete Source
                    </button>
                </div>
            </div>
        </div>
    }

    @* Clear Data Confirmation Modal *@
    @if (ShowClearDataConfirmation)
    {
        <div class="epi-modal-overlay" @onclick="CancelClearDataConfirmation">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Clear All Data</h2>
                    <button type="button" @onclick="CancelClearDataConfirmation" class="epi-modal-close" aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-warning-box">
                        <strong>Warning:</strong> This will clear all data items from source <strong>"@CurrentSourceId"</strong> in Optimizely Graph. This action cannot be undone.
                    </div>
                    <p style="margin-top: 16px;">Are you sure you want to clear all data?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary" @onclick="CancelClearDataConfirmation" disabled="@IsClearingData">Cancel</button>
                    <button type="button" class="epi-button epi-button--danger" @onclick="ConfirmClearAllData" disabled="@IsClearingData">
                        @if (IsClearingData) { <span class="epi-loader-small"></span> }
                        Yes, Clear All Data
                    </button>
                </div>
            </div>
        </div>
    }

    @* Import Confirmation Modal *@
    @if (ShowImportConfirmation)
    {
        <div class="epi-modal-overlay" @onclick="CancelImportConfirmation">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h2 class="epi-h2">Confirm Import</h2>
                    <button type="button" @onclick="CancelImportConfirmation" class="epi-modal-close" aria-label="Close">×</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-info-box">
                        <p><strong>Ready to import data to Optimizely Graph.</strong></p>
                        <p>Items to import: <strong>@ImportPreviewItems.Count</strong></p>
                        <p>Target source: <strong>@CurrentSourceId</strong></p>
                        <p>Content type: <strong>@SelectedContentType?.Name</strong></p>
                    </div>
                    @if (ImportPreviewWarnings.Any())
                    {
                        <div class="epi-warning-box" style="margin-top: 16px;">
                            <strong>Note:</strong> There were @ImportPreviewWarnings.Count warning(s) during preview. Check the preview results for details.
                        </div>
                    }
                    <p style="margin-top: 16px;">Do you want to proceed with the import?</p>
                </div>
                <div class="epi-modal-footer">
                    <button type="button" class="epi-button epi-button--secondary" @onclick="CancelImportConfirmation" disabled="@IsImporting">Cancel</button>
                    <button type="button" class="epi-button epi-button--primary" @onclick="ExecuteImport" disabled="@IsImporting">
                        @if (IsImporting) { <span class="epi-loader-small"></span> }
                        Yes, Import Data
                    </button>
                </div>
            </div>
        </div>
    }

    @* Mode: List *@
    @if (CurrentMode == "list")
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">Custom Data Sources</h2>
                <div class="epi-header-actions">
                    <span class="epi-badge">@AllSources.Count total sources</span>
                    <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="LoadSources" disabled="@IsLoading">
                        Refresh
                    </button>
                    <button type="button" class="epi-button epi-button--primary epi-button--small" @onclick="ShowCreateSchemaForm" disabled="@IsLoading">
                        New Source
                    </button>
                </div>
            </div>
            <div class="epi-content">
                @if (IsLoading)
                {
                    <div class="epi-loading">
                        <div class="epi-loader"></div>
                        <p>Loading sources from Optimizely Graph...</p>
                    </div>
                }
                else
                {
                    <div class="epi-info-box">
                        <p><strong>Custom Data Sources</strong> allow you to define your own GraphQL schemas and sync external data to Optimizely Graph.</p>
                        <p style="margin-bottom: 0;"><strong>Note:</strong> Source IDs must be 1-4 lowercase letters and/or numbers only.</p>
                    </div>

                    @if (AllSources.Any())
                    {
                        <div class="epi-table-container">
                            <table class="epi-table">
                                <thead>
                                    <tr>
                                        <th>Source ID</th>
                                        <th>Label</th>
                                        <th>Languages</th>
                                        <th>Content Types</th>
                                        <th class="epi-align-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var source in PaginationResult?.Items ?? AllSources)
                                    {
                                        <tr>
                                            <td><code class="epi-code">@source.SourceId</code></td>
                                            <td>@(source.Label ?? "-")</td>
                                            <td>@source.LanguagesDisplay</td>
                                            <td>@source.ContentTypeCount type(s)</td>
                                            <td class="epi-align-right">
                                                <div class="epi-button-group">
                                                    <button type="button" class="epi-button epi-button--info epi-button--small" @onclick="@(() => ShowEditSchemaForm(source.SourceId))" title="Edit Schema">
                                                        Schema
                                                    </button>
                                                    <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="@(() => ShowDataManagement(source.SourceId))" title="Manage Data">
                                                        Data
                                                    </button>
                                                    <button type="button" class="epi-button epi-button--danger epi-button--small" @onclick="@(() => ShowDeleteConfirmationDialog(source.SourceId))" title="Delete Source">
                                                        Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (TotalPages > 1)
                        {
                            <div class="epi-pagination">
                                <div class="epi-pagination-info">
                                    Showing @((CurrentPage - 1) * PageSize + 1) to @Math.Min(CurrentPage * PageSize, AllSources.Count) of @AllSources.Count sources
                                </div>
                                <div class="epi-pagination-controls">
                                    <button type="button" class="epi-button epi-button--secondary epi-button--small" disabled="@(CurrentPage <= 1)" @onclick="GoToPreviousPage">
                                        Previous
                                    </button>
                                    @for (int i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                                    {
                                        var pageNumber = i;
                                        <button type="button" @onclick="@(() => GoToPage(pageNumber))"
                                                class="epi-button epi-button--small @(CurrentPage == pageNumber ? "epi-button--primary" : "epi-button--secondary")">
                                            @pageNumber
                                        </button>
                                    }
                                    <button type="button" class="epi-button epi-button--secondary epi-button--small" disabled="@(CurrentPage >= TotalPages)" @onclick="GoToNextPage">
                                        Next
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="epi-empty-state">
                            <p>No custom data sources found. Click "New Source" to create your first custom data source.</p>
                        </div>
                    }
                }
            </div>
        </div>
    }

    @* Mode: Schema Editor *@
    @if (CurrentMode == "schema")
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">@(IsEditingSchema ? $"Edit Schema: {CurrentSchema.SourceId}" : "Create New Schema")</h2>
                <div class="epi-header-actions">
                    <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="BackToList">
                        Back to List
                    </button>
                </div>
            </div>
            <div class="epi-form">
                @* Editor Mode Toggle *@
                <div class="epi-tabs">
                    <button type="button" class="epi-tab @(EditorMode == "visual" ? "epi-tab--active" : "")" @onclick="SwitchToVisualMode">Visual Builder</button>
                    <button type="button" class="epi-tab @(EditorMode == "raw" ? "epi-tab--active" : "")" @onclick="SwitchToRawMode">Raw JSON</button>
                </div>

                @if (EditorMode == "visual")
                {
                    <div class="epi-form-section">
                        <h3 class="epi-h3">Source Configuration</h3>
                        <p class="epi-help-text">Configure the basic properties of your custom data source.</p>

                        <div class="epi-form-row">
                            <div class="epi-form-field epi-form-field--source-id">
                                <label for="sourceId" class="epi-label">Source ID *</label>
                                <input id="sourceId" type="text" class="epi-textbox" @bind="CurrentSchema.SourceId"
                                       placeholder="e.g., prod" maxlength="4"
                                       disabled="@IsEditingSchema"
                                       pattern="[a-z0-9]{1,4}" />
                                <span class="epi-field-help">1-4 lowercase letters and/or numbers</span>
                            </div>
                            <div class="epi-form-field epi-form-field--label">
                                <label for="schemaLabel" class="epi-label">Label</label>
                                <input id="schemaLabel" type="text" class="epi-textbox" @bind="CurrentSchema.Label" placeholder="Human-readable label" />
                            </div>
                        </div>
                    </div>

                    <div class="epi-form-section">
                        <h3 class="epi-h3">Languages</h3>
                        <p class="epi-help-text">Define which languages are supported by this data source.</p>

                        <div class="epi-languages-list">
                            @for (int i = 0; i < CurrentSchema.Languages.Count; i++)
                            {
                                var index = i;
                                <div class="epi-language-row">
                                    <input type="text" class="epi-textbox epi-textbox--small" value="@CurrentSchema.Languages[index]"
                                           @onchange="@(e => CurrentSchema.Languages[index] = e.Value?.ToString() ?? string.Empty)"
                                           placeholder="e.g., en" />
                                    <button type="button" class="epi-button epi-button--danger epi-button--small" @onclick="@(() => RemoveLanguage(index))">Remove</button>
                                </div>
                            }
                        </div>
                        <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="AddLanguage">Add Language</button>
                    </div>

                    <div class="epi-form-section">
                        <div class="epi-section-header">
                            <h3 class="epi-h3">Content Types</h3>
                            <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="AddContentType">Add Content Type</button>
                        </div>
                        <p class="epi-help-text">Define the content types and their properties that will be available in your custom data source.</p>

                        @foreach (var contentType in CurrentSchema.ContentTypes)
                        {
                            <div class="epi-content-type-card">
                                <div class="epi-content-type-header">
                                    <div class="epi-form-row">
                                        <div class="epi-form-field">
                                            <label class="epi-label">Type Name *</label>
                                            <input type="text" class="epi-textbox" @bind="contentType.Name" placeholder="e.g., Product" />
                                        </div>
                                        <div class="epi-form-field">
                                            <label class="epi-label">Label</label>
                                            <input type="text" class="epi-textbox" @bind="contentType.Label" placeholder="Human-readable label" />
                                        </div>
                                    </div>
                                    <button type="button" class="epi-button epi-button--danger epi-button--small" @onclick="@(() => RemoveContentType(contentType))">Remove Type</button>
                                </div>

                                <div class="epi-properties-section">
                                    <h4 class="epi-h4">Properties</h4>
                                    @if (contentType.Properties.Any())
                                    {
                                        <div class="epi-table-container">
                                            <table class="epi-table epi-table--compact">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Type</th>
                                                        <th>Searchable</th>
                                                        <th>Required</th>
                                                        <th class="epi-align-right">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var property in contentType.Properties)
                                                    {
                                                        <tr>
                                                            <td><input type="text" class="epi-textbox epi-textbox--small" @bind="property.Name" placeholder="Property name" /></td>
                                                            <td>
                                                                <select class="epi-select epi-select--small" @bind="property.Type">
                                                                    @foreach (var type in AvailablePropertyTypes)
                                                                    {
                                                                        <option value="@type">@type</option>
                                                                    }
                                                                </select>
                                                            </td>
                                                            <td class="epi-align-center"><input type="checkbox" @bind="property.IsSearchable" /></td>
                                                            <td class="epi-align-center"><input type="checkbox" @bind="property.IsRequired" /></td>
                                                            <td class="epi-align-right">
                                                                <button type="button" class="epi-button epi-button--danger epi-button--small" @onclick="@(() => RemoveProperty(contentType, property))">Remove</button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="@(() => AddProperty(contentType))">Add Property</button>
                                </div>
                            </div>
                        }

                        @if (!CurrentSchema.ContentTypes.Any())
                        {
                            <div class="epi-empty-state epi-empty-state--compact">
                                <p>No content types defined. Click "Add Content Type" to define your schema.</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="epi-form-section">
                        <h3 class="epi-h3">Schema JSON</h3>
                        <p class="epi-help-text">Edit the schema definition directly in JSON format.</p>
                        <textarea class="epi-textarea epi-textarea--code" rows="20" @bind="RawSchemaJson"></textarea>
                    </div>
                }

                <div class="epi-form-actions">
                    @if (IsEditingSchema)
                    {
                        <button type="button" class="epi-button epi-button--primary" @onclick="SaveSchemaPartialSync" disabled="@IsSyncing">
                            @if (IsSyncing) { <span class="epi-loader-small"></span> }
                            Save (Partial Sync)
                        </button>
                    }
                    <button type="button" class="epi-button @(IsEditingSchema ? "epi-button--warning" : "epi-button--primary")" @onclick="SaveSchemaFullSync" disabled="@IsSyncing">
                        @if (IsSyncing) { <span class="epi-loader-small"></span> }
                        @(IsEditingSchema ? "Save (Full Sync - Deletes Data)" : "Create Schema")
                    </button>
                    <button type="button" class="epi-button epi-button--secondary" @onclick="BackToList" disabled="@IsSyncing">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    }

    @* Mode: Data Management *@
    @if (CurrentMode == "data")
    {
        <div class="epi-contentGroup">
            <div class="epi-groupHeader">
                <h2 class="epi-h2">Manage Data: @CurrentSourceId</h2>
                <div class="epi-header-actions">
                    <span class="epi-badge">@DataItems.Count items</span>
                    <button type="button" class="epi-button epi-button--info epi-button--small" @onclick="ToggleImportSection">
                        @(ShowImportSection ? "Hide Import" : "Import")
                    </button>
                    <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="BackToList">
                        Back to List
                    </button>
                </div>
            </div>
            <div class="epi-form">
                @* Import Section *@
                @if (ShowImportSection)
                {
                    <div class="epi-form-section epi-import-section">
                        <h3 class="epi-h3">External Data Import</h3>
                        <p class="epi-help-text">Import data from external APIs and sync to Optimizely Graph.</p>

                        @if (EditingImportConfig == null)
                        {
                            @* Saved Configurations List *@
                            <div class="epi-import-configs">
                                <div class="epi-section-header">
                                    <h4 class="epi-h4">Saved Configurations</h4>
                                    <button type="button" class="epi-button epi-button--primary epi-button--small" @onclick="ShowNewImportConfigForm">
                                        New Import
                                    </button>
                                </div>

                                @if (ImportConfigurations.Any())
                                {
                                    <div class="epi-table-container">
                                        <table class="epi-table epi-table--compact">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>API URL</th>
                                                    <th>Last Import</th>
                                                    <th class="epi-align-right">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var config in ImportConfigurations)
                                                {
                                                    <tr>
                                                        <td>
                                                            <strong>@config.Name</strong>
                                                            @if (!string.IsNullOrEmpty(config.Description))
                                                            {
                                                                <br /><small class="epi-muted">@config.Description</small>
                                                            }
                                                        </td>
                                                        <td><code class="epi-code epi-code--truncate">@config.ApiUrl</code></td>
                                                        <td>
                                                            @if (config.LastImportAt.HasValue)
                                                            {
                                                                <span>@config.LastImportAt.Value.ToString("g") (@config.LastImportCount items)</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="epi-muted">Never</span>
                                                            }
                                                        </td>
                                                        <td class="epi-align-right">
                                                            <div class="epi-button-group">
                                                                <button type="button" class="epi-button epi-button--primary epi-button--small" @onclick="@(() => RunSavedImport(config))" disabled="@IsImporting">
                                                                    Run
                                                                </button>
                                                                <button type="button" class="epi-button epi-button--secondary epi-button--small" @onclick="@(() => EditImportConfig(config))">
                                                                    Edit
                                                                </button>
                                                                <button type="button" class="epi-button epi-button--danger epi-button--small" @onclick="@(() => DeleteImportConfiguration(config.Id!.Value))">
                                                                    Delete
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="epi-empty-state epi-empty-state--compact">
                                        <p>No saved import configurations. Click "New Import" to create one.</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            @* Import Configuration Form *@
                            <div class="epi-import-form">
                                <h4 class="epi-h4">@(EditingImportConfig.Id.HasValue ? "Edit Import Configuration" : "New Import Configuration")</h4>

                                @* Basic Info *@
                                <div class="epi-form-row">
                                    <div class="epi-form-field">
                                        <label class="epi-label">Name *</label>
                                        <input type="text" class="epi-textbox" @bind="EditingImportConfig.Name" placeholder="e.g., Product API Import" />
                                    </div>
                                    <div class="epi-form-field">
                                        <label class="epi-label">Description</label>
                                        <input type="text" class="epi-textbox" @bind="EditingImportConfig.Description" placeholder="Optional description" />
                                    </div>
                                </div>

                                @* API Settings *@
                                <div class="epi-form-row">
                                    <div class="epi-form-field" style="flex: 2;">
                                        <label class="epi-label">API URL *</label>
                                        <input type="url" class="epi-textbox" @bind="EditingImportConfig.ApiUrl" placeholder="https://api.example.com/data" />
                                    </div>
                                    <div class="epi-form-field" style="flex: 0 0 150px;">
                                        <label class="epi-label">HTTP Method</label>
                                        <select class="epi-select" @bind="EditingImportConfig.HttpMethod">
                                            <option value="GET">GET</option>
                                            <option value="POST">POST</option>
                                        </select>
                                    </div>
                                </div>

                                @* Authentication *@
                                <div class="epi-form-subsection">
                                    <h5 class="epi-h5">Authentication</h5>
                                    <div class="epi-form-row">
                                        <div class="epi-form-field" style="flex: 0 0 200px;">
                                            <label class="epi-label">Auth Type</label>
                                            <select class="epi-select" @bind="EditingImportConfig.AuthType">
                                                <option value="@AuthenticationType.None">None</option>
                                                <option value="@AuthenticationType.ApiKey">API Key</option>
                                                <option value="@AuthenticationType.Basic">Basic Auth</option>
                                                <option value="@AuthenticationType.Bearer">Bearer Token</option>
                                            </select>
                                        </div>
                                        @if (EditingImportConfig.AuthType == AuthenticationType.ApiKey)
                                        {
                                            <div class="epi-form-field">
                                                <label class="epi-label">Header Name</label>
                                                <input type="text" class="epi-textbox" @bind="EditingImportConfig.AuthKeyOrUsername" placeholder="X-API-Key" />
                                            </div>
                                            <div class="epi-form-field">
                                                <label class="epi-label">API Key</label>
                                                <input type="password" class="epi-textbox" @bind="EditingImportConfig.AuthValueOrPassword" placeholder="Your API key" />
                                            </div>
                                        }
                                        @if (EditingImportConfig.AuthType == AuthenticationType.Basic)
                                        {
                                            <div class="epi-form-field">
                                                <label class="epi-label">Username</label>
                                                <input type="text" class="epi-textbox" @bind="EditingImportConfig.AuthKeyOrUsername" placeholder="Username" />
                                            </div>
                                            <div class="epi-form-field">
                                                <label class="epi-label">Password</label>
                                                <input type="password" class="epi-textbox" @bind="EditingImportConfig.AuthValueOrPassword" placeholder="Password" />
                                            </div>
                                        }
                                        @if (EditingImportConfig.AuthType == AuthenticationType.Bearer)
                                        {
                                            <div class="epi-form-field" style="flex: 2;">
                                                <label class="epi-label">Bearer Token</label>
                                                <input type="password" class="epi-textbox" @bind="EditingImportConfig.AuthValueOrPassword" placeholder="Your bearer token" />
                                            </div>
                                        }
                                    </div>
