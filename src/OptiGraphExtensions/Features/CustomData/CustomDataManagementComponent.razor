                    <div class="epi-form-section">
                        <h3 class="epi-h3">Languages</h3>
                        <p class="epi-help-text">Define which languages are supported by this data source.</p>

                        <div class="epi-languages-list">
                            @for (int i = 0; i < CurrentSchema.Languages.Count; i++)
                            {
                                var index = i;
                                <div class="epi-language-row">
                                    <input type="text" class="epi-textbox epi-textbox--small"
                                        value="@CurrentSchema.Languages[index]"
                                        @onchange="@(e => CurrentSchema.Languages[index] = e.Value?.ToString() ?? string.Empty)"
                                        placeholder="e.g., en" />
                                    <button type="button" class="epi-button epi-button--danger epi-button--small"
                                        @onclick="@(() => RemoveLanguage(index))">Remove</button>
                                </div>
                            }
                        </div>
                        <button type="button" class="epi-button epi-button--secondary epi-button--small"
