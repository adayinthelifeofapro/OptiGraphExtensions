                                                        @foreach (var day in ImportConfigurationModel.AvailableDaysOfWeek)
                                                        {
                                                            <option value="@day.Value">@day.Label</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        }

                                        @if (EditingImportConfig.ScheduleFrequency == ScheduleFrequency.Monthly)
                                        {
                                            <div class="epi-form-row">
                                                <div class="epi-form-field">
                                                    <label class="epi-label">Day of Month</label>
                                                    <select class="epi-select" @bind="EditingImportConfig.ScheduleDayOfMonth">
                                                        @foreach (var day in ImportConfigurationModel.AvailableDaysOfMonth)
                                                        {
                                                            <option value="@day">@day</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        }

                                        @if (EditingImportConfig.ScheduleFrequency != ScheduleFrequency.None)
                                        {
                                            <div class="epi-form-row">
                                                <div class="epi-form-field">
                                                    <label class="epi-label">Max Retries</label>
                                                    <input type="number" class="epi-textbox" min="0" max="10"
                                                        @bind="EditingImportConfig.MaxRetries" />
                                                    <span class="epi-field-help">Number of retry attempts after a failure (0 to
                                                        disable)</span>
                                                </div>
                                                <div class="epi-form-field">
                                                    <label class="epi-label">Notification Email</label>
                                                    <input type="email" class="epi-textbox"
                                                        @bind="EditingImportConfig.NotificationEmail"
                                                        placeholder="admin@example.com" />
                                                    <span class="epi-field-help">Email address for failure notifications (after max
                                                        retries)</span>
                                                </div>
                                            </div>

                                            <div class="epi-info-box">
                                                <p><strong>Schedule Preview:</strong> @EditingImportConfig.ScheduleDescription</p>
                                                <p class="epi-help-text">Enable the "External Data Import" scheduled job in CMS Admin
                                                    > Scheduled Jobs for automatic execution.</p>
                                            </div>
                                        }
                                    </div>
                                </details>

                                @* Custom Headers (Collapsible) *@
                                            <details class="epi-collapsible">
                                    <summary>Custom Headers (Optional)</summary>
                                    <div class="epi-form-subsection">
                                        <div class="epi-section-header">
                                            <span></span>
                                            <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                                @onclick="AddCustomHeader">
                                                Add Header
                                            </button>
                                        </div>
                                        @if (EditingImportConfig.CustomHeaders.Any())
                                        {
                                            @foreach (var header in EditingImportConfig.CustomHeaders.ToList())
                                            {
                                                <div class="epi-form-row">
                                                    <div class="epi-form-field">
                                                        <input type="text" class="epi-textbox epi-textbox--small" value="@header.Key"
                                                            placeholder="Header name"
                                                            @onchange="@(e => { EditingImportConfig.CustomHeaders.Remove(header.Key); EditingImportConfig.CustomHeaders[e.Value?.ToString() ?? ""] = header.Value; })" />
                                                    </div>
                                                    <div class="epi-form-field">
                                                        <input type="text" class="epi-textbox epi-textbox--small" value="@header.Value"
                                                            placeholder="Header value"
                                                            @onchange="@(e => EditingImportConfig.CustomHeaders[header.Key] = e.Value?.ToString() ?? "")" />
                                                    </div>
                                                    <button type="button" class="epi-button epi-button--danger epi-button--small"
                                                        @onclick="@(() => RemoveCustomHeader(header.Key))">
                                                        Remove
                                                    </button>
                                                </div>
                                            }
                                        }
                                    </div>
                                </details>

                                @* Import Form Actions *@
                                            <div class="epi-form-actions">
                                    <button type="button" class="epi-button epi-button--info" @onclick="PreviewImport"
                                        disabled="@IsImporting">
                                        @if (IsImporting)
                                        {
                                            <span class="epi-loader-small"></span>
                                        }
                                        Preview
                                    </button>
                                    <button type="button" class="epi-button epi-button--primary"
                                        @onclick="ShowImportConfirmationDialog"
                                        disabled="@(IsImporting || !ImportPreviewItems.Any())">
                                        Import to Graph
                                    </button>
                                    <button type="button" class="epi-button epi-button--secondary"
                                        @onclick="SaveImportConfiguration" disabled="@IsLoading">
                                        @if (IsLoading)
                                        {
                                            <span class="epi-loader-small"></span>
                                        }
                                        Save Configuration
                                    </button>
                                    <button type="button" class="epi-button epi-button--secondary"
                                        @onclick="CancelEditImportConfig">
                                        Cancel
                                    </button>
                                </div>

                                @* Preview Results *@
                                            @if (ShowImportPreview && ImportPreviewItems.Any())
                                {
                                    <div class="epi-form-section">
                                        <h5 class="epi-h5">Preview (@ImportPreviewItems.Count items)</h5>
                                        @if (ImportPreviewWarnings.Any())
                                        {
                                            <div class="epi-warning-box">
                                                <strong>Warnings:</strong>
                                                <ul>
                                                    @foreach (var warning in ImportPreviewWarnings.Take(5))
                                                    {
                                                        <li>@warning</li>
                                                    }
                                                    @if (ImportPreviewWarnings.Count > 5)
                                                    {
                                                        <li>... and @(ImportPreviewWarnings.Count - 5) more</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                        <div class="epi-table-container">
                                            <table class="epi-table epi-table--compact">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Language</th>
                                                        @if (SelectedContentType != null)
                                                        {
                                                            @foreach (var prop in SelectedContentType.Properties.Take(4))
                                                            {
                                                                <th>@prop.Name</th>
                                                            }
                                                        }
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in ImportPreviewItems.Take(10))
                                                    {
                                                        <tr>
                                                            <td><code class="epi-code">@item.Id</code></td>
                                                            <td>@(item.LanguageRouting ?? "-")</td>
                                                            @if (SelectedContentType != null)
                                                            {
                                                                @foreach (var prop in SelectedContentType.Properties.Take(4))
                                                                {
                                                                    <td>@(item.Properties.TryGetValue(prop.Name, out var val) ? val?.ToString() ??
                                                                                                                    "-" : "-")</td>
                                                                }
                                                            }
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        @if (ImportPreviewItems.Count > 10)
                                        {
                                            <p class="epi-help-text">Showing first 10 of @ImportPreviewItems.Count items</p>
                                        }

                                        @* NdJSON Preview Toggle *@
                                        <div class="epi-ndjson-preview-section">
                                            <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                                @onclick="ToggleNdJsonPreview">
                                                @(ShowNdJsonPreview ? "Hide NdJSON Preview" : "Show NdJSON Preview")
                                            </button>
                                            @if (ShowNdJsonPreview && !string.IsNullOrEmpty(ImportNdJsonPreview))
                                            {
                                                <div class="epi-ndjson-preview">
                                                    <p class="epi-help-text">NdJSON that will be sent to Graph (showing first 5 items):</p>
                                                    <pre class="epi-json-body">@ImportNdJsonPreview</pre>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                @* Import Results *@
                                @if (LastImportResult != null)
                                {
                                    <div class="@(LastImportResult.Success ? "epi-info-box epi-info-box--success" : "epi-warning-box")">
                                        <h5 class="epi-h5">Import Results</h5>
                                        <p><strong>Status:</strong> @(LastImportResult.Success ? "Success" : "Failed")</p>
                                        <p><strong>Items Imported:</strong> @LastImportResult.ItemsImported of
                                            @LastImportResult.TotalItemsReceived</p>
                                        <p><strong>Duration:</strong> @LastImportResult.Duration.TotalSeconds.ToString("F2") seconds</p>
                                        @if (LastImportResult.Errors.Any())
                                        {
                                            <p><strong>Errors:</strong></p>
                                            <ul>
                                                @foreach (var error in LastImportResult.Errors.Take(5))
                                                {
                                                    <li>@error</li>
                                                }
                                            </ul>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }

                @* Manual data entry section - toggled by the Manual button *@
                @if (ShowManualSection)
                {
                    <div class="epi-manual-data-section">
                        <div class="epi-manual-data-header">
                            <h3 class="epi-h3">Manual Data Entry</h3>
                            <p class="epi-help-text">Add and edit data items manually using the visual builder or raw NdJSON
                                editor.</p>
                        </div>

                        @* Editor Mode Toggle *@
                                <div class="epi-tabs">
                            <button type="button" class="epi-tab @(EditorMode == "visual" ? "epi-tab--active" : "")"
                                @onclick="SwitchToVisualMode">Visual Builder</button>
                            <button type="button" class="epi-tab @(EditorMode == "raw" ? "epi-tab--active" : "")"
                                @onclick="SwitchToRawMode">Raw NdJSON</button>
                        </div>

                        @if (EditorMode == "visual")
                        {
                            @if (IsLoadingSchema)
                            {
                                <div class="epi-loading">
                                    <div class="epi-loader"></div>
                                    <p>Loading schema...</p>
                                </div>
                            }
                            else
                            {
                                <div class="epi-form-section">
                                    <h3 class="epi-h3">Content Type</h3>
                                    <p class="epi-help-text">Select the content type to add data items.</p>
                                    <div class="epi-form-row">
                                        <div class="epi-form-field">
                                            <label for="contentTypeSelect" class="epi-label">Content Type</label>
                                            <select id="contentTypeSelect" class="epi-select" @onchange="OnContentTypeSelected">
                                                @foreach (var ct in CurrentSchema.ContentTypes)
                                                {
                                                    <option value="@ct.Name" selected="@(SelectedContentType?.Name == ct.Name)">@ct.Name
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                @* Add/Edit Item Form *@
                                        @if (EditingItem != null)
                                {
                                    <div class="epi-form-section epi-form-section--highlight">
                                        <h3 class="epi-h3">@(DataItems.Any(i => i.Id == EditingItem.Id) ? "Edit Item" : "New Item")</h3>

                                        <div class="epi-form-row">
                                            <div class="epi-form-field">
                                                <label for="itemId" class="epi-label">Item ID *</label>
                                                <input id="itemId" type="text" class="epi-textbox" @bind="EditingItem.Id"
                                                    placeholder="Unique identifier" />
                                            </div>
                                            <div class="epi-form-field">
                                                <label for="itemLanguage" class="epi-label">Language</label>
                                                <select id="itemLanguage" class="epi-select" @bind="EditingItem.LanguageRouting">
                                                    @foreach (var lang in CurrentSchema.Languages)
                                                    {
                                                        <option value="@lang">@lang</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        @if (SelectedContentType != null)
                                        {
                                            <div class="epi-properties-form">
                                                @foreach (var property in SelectedContentType.Properties)
                                                {
                                                    <div class="epi-form-field">
                                                        <label class="epi-label">
                                                            @property.Name
                                                            @if (property.IsRequired)
                                                            {
                                                                <span class="epi-required">*</span>
                                                            }
                                                        </label>
                                                        @if (property.Type == "Boolean")
                                                        {
                                                            <div class="epi-checkbox-wrapper">
                                                                <input type="checkbox" id="prop_@property.Name"
                                                                    checked="@((bool?)GetPropertyValue(property.Name) ?? false)"
                                                                    @onchange="@(e => SetPropertyValue(property.Name, e.Value))" />
                                                                <label for="prop_@property.Name">@property.Name</label>
                                                            </div>
                                                        }
                                                        else if (IsArrayType(property.Type))
                                                        {
                                                            <textarea class="epi-textbox" rows="3"
                                                                @onchange="@(e => SetArrayPropertyValue(property.Name, property.Type, e.Value?.ToString()))"
                                                                placeholder="@($"Enter comma-separated values for {property.Name}")">@GetArrayDisplayValue(property.Name)</textarea>
                                                            <small class="epi-help-text">Enter values separated by commas</small>
                                                        }
                                                        else
                                                        {
                                                            <input type="@GetInputType(property.Type)" class="epi-textbox"
                                                                value="@GetPropertyValue(property.Name)?.ToString()"
                                                                @onchange="@(e => SetPropertyValue(property.Name, e.Value))"
                                                                placeholder="@property.Name" />
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        }

                                        <div class="epi-form-actions">
                                            <button type="button" class="epi-button epi-button--primary" @onclick="SaveDataItem">Save
                                                Item</button>
                                            <button type="button" class="epi-button epi-button--secondary"
                                                @onclick="CancelEditItem">Cancel</button>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="epi-form-section">
                                        <button type="button" class="epi-button epi-button--secondary" @onclick="AddDataItem">Add
                                            Item</button>
                                    </div>
                                }

                                @* Data Items Table *@
                                        @if (DataItems.Any())
                                {
                                    <div class="epi-form-section">
                                        <h3 class="epi-h3">Data Items (@DataItems.Count)</h3>
                                        <div class="epi-table-container">
                                            <table class="epi-table">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Content Type</th>
                                                        <th>Language</th>
                                                        <th>Properties</th>
                                                        <th class="epi-align-right">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in DataPaginationResult?.Items ?? DataItems)
                                                    {
                                                        <tr>
                                                            <td><code class="epi-code">@item.Id</code></td>
                                                            <td>@item.ContentType</td>
                                                            <td>@(item.LanguageRouting ?? "-")</td>
                                                            <td>@item.Properties.Count properties</td>
                                                            <td class="epi-align-right">
                                                                <div class="epi-button-group">
                                                                    <button type="button"
                                                                        class="epi-button epi-button--secondary epi-button--small"
                                                                        @onclick="@(() => EditDataItem(item))">Edit</button>
                                                                    <button type="button"
                                                                        class="epi-button epi-button--danger epi-button--small"
                                                                        @onclick="@(() => RemoveDataItem(item))">Remove</button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                        @if (DataTotalPages > 1)
                                        {
                                            <div class="epi-pagination">
                                                <div class="epi-pagination-info">
                                                    Showing @((DataCurrentPage - 1) * DataPageSize + 1) to @Math.Min(DataCurrentPage *
                                                                                DataPageSize, DataItems.Count) of @DataItems.Count items
                        </div>
                        <div class="epi-pagination-controls">
                            <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                disabled="@(DataCurrentPage <= 1)" @onclick="DataGoToPreviousPage">Previous</button>
                            @for (int i = Math.Max(1, DataCurrentPage - 2); i <= Math.Min(DataTotalPages,
                                                        DataCurrentPage + 2); i++)
                                                    {
                                                        var pageNumber = i;
                                                        <button type="button" @onclick="@(() => DataGoToPage(pageNumber))"
                                                            class="epi-button epi-button--small @(DataCurrentPage == pageNumber ? "epi-button--primary" : "epi-button--secondary")">
                                                            @pageNumber
                                                        </button>
                                                    }
                                                    <button type="button" class="epi-button epi-button--secondary epi-button--small"
                                                        disabled="@(DataCurrentPage >= DataTotalPages)"
                                                        @onclick="DataGoToNextPage">Next</button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            }
                        }
                        else
                        {
                            <div class="epi-form-section">
                                <h3 class="epi-h3">NdJSON Data</h3>
                                <p class="epi-help-text">Edit the data directly in NdJSON format. Each item requires two lines: an
                                    action line and a data line.</p>
                                <textarea class="epi-textarea epi-textarea--code" rows="20" @bind="RawNdJson"></textarea>

                                <div class="epi-info-box" style="margin-top: 16px;">
                                    <p><strong>NdJSON Format Example:</strong></p>
                                    <pre class="epi-json-body">{"index": {"_id": "1", "language_routing": "en"}}
            {"Name": "Item 1", "Description": "..."}</pre>
                                </div>
                            </div>
                        }

                        <div class="epi-form-actions">
                            <button type="button" class="epi-button epi-button--primary" @onclick="SyncDataToGraph"
                                disabled="@(IsSyncing || IsLoadingSchema || !DataItems.Any())">
                                @if (IsSyncing)
                                {
                                    <span class="epi-loader-small"></span>
                                }
                                Sync to Graph (@DataItems.Count items)
                            </button>
                            <button type="button" class="epi-button epi-button--info" @onclick="LoadDataFromGraph"
                                disabled="@(IsSyncing || IsLoadingSchema || SelectedContentType == null)">
                                @if (IsLoadingSchema)
                                {
                                    <span class="epi-loader-small"></span>
                                }
                                Refresh from Graph
                            </button>
                            <button type="button" class="epi-button epi-button--secondary" @onclick="BackToList"
                                disabled="@(IsSyncing || IsLoadingSchema)">
                                Cancel
                            </button>
                        </div>
                    </div> @* End of epi-manual-data-section *@
                    } @* End of !ShowImportSection *@
            </div>
        </div>
    }
</div>

