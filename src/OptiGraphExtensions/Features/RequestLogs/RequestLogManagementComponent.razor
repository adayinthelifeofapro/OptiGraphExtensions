@inherits RequestLogManagementComponentBase

<div class="epi-request-logs-container">
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--danger">
            <div class="epi-notificationbar-text">@ErrorMessage</div>
        </div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--success">
            <div class="epi-notificationbar-text">@SuccessMessage</div>
        </div>
    }

    @* API Query Parameters (Server-side Filtering) *@
    <div class="epi-filter-panel epi-filter-panel--api">
        <div class="epi-filter-section-header">
            <span class="epi-filter-section-title">API Filters</span>
            <span class="epi-filter-section-hint">Server-side filtering - requires clicking "Apply & Fetch"</span>
        </div>
        <div class="epi-filter-row">
            <div class="epi-filter-group">
                <label class="epi-label">Page</label>
                <input type="number" class="epi-textbox epi-textbox--small" min="1" placeholder="Page #" value="@ApiPage" @onchange="e => ApiPage = int.TryParse(e.Value?.ToString(), out var p) && p > 0 ? p : null" />
            </div>
            <div class="epi-filter-group">
                <label class="epi-label">Request ID</label>
                <input type="text" class="epi-textbox" placeholder="Filter by request ID" @bind="ApiRequestId" />
            </div>
            <div class="epi-filter-group">
                <label class="epi-label">Host</label>
                <input type="text" class="epi-textbox" placeholder="Filter by host" @bind="ApiHost" />
            </div>
            <div class="epi-filter-group">
                <label class="epi-label">Path</label>
                <input type="text" class="epi-textbox" placeholder="Filter by path" @bind="ApiPath" />
            </div>
            <div class="epi-filter-group">
                <label class="epi-label">Success</label>
                <select class="epi-select" @bind="ApiSuccess">
                    <option value="">All</option>
                    <option value="true">Success</option>
                    <option value="false">Failed</option>
                </select>
            </div>
            <div class="epi-filter-actions">
                <button class="epi-button" @onclick="LoadLogs" disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {
                        <span>Apply & Fetch</span>
                    }
                </button>
            </div>
        </div>
    </div>

    @* Client-side Filters *@
    <div class="epi-filter-panel">
        <div class="epi-filter-section-header">
            <span class="epi-filter-section-title">Local Filters</span>
            <span class="epi-filter-section-hint">Client-side filtering - filters results in memory</span>
        </div>
        <div class="epi-filter-row">
            <div class="epi-filter-group">
                <label class="epi-label">Start Date</label>
                <input type="date" class="epi-textbox" value="@StartDate?.ToString("yyyy-MM-dd")" @onchange="OnStartDateChanged" />
            </div>
            <div class="epi-filter-group">
                <label class="epi-label">End Date</label>
                <input type="date" class="epi-textbox" value="@EndDate?.ToString("yyyy-MM-dd")" @onchange="OnEndDateChanged" />
            </div>
            <div class="epi-filter-group">
                <label class="epi-label">Method</label>
                <select class="epi-select" value="@SelectedMethod" @onchange="OnMethodFilterChanged">
                    <option value="">All Methods</option>
                    @foreach (var method in AvailableHttpMethods)
                    {
                        <option value="@method">@method</option>
                    }
                </select>
            </div>
            <div class="epi-filter-group">
                <label class="epi-label">Status</label>
                <select class="epi-select" value="@SelectedStatus" @onchange="OnStatusFilterChanged">
                    <option value="">All</option>
                    <option value="success">Success</option>
                    <option value="failed">Failed</option>
                </select>
            </div>
        </div>
        <div class="epi-filter-row">
            <div class="epi-filter-group epi-filter-group--search">
                <label class="epi-label">Search</label>
                <input type="text" class="epi-textbox" placeholder="Search path, operation, message, user..." value="@SearchText" @onchange="OnSearchTextChanged" />
            </div>
            <div class="epi-filter-actions">
                @if (HasActiveFilters)
                {
                    <button class="epi-button epi-button--secondary" @onclick="ClearAllFilters" disabled="@IsLoading">Clear All Filters</button>
                }
            </div>
        </div>
    </div>

    @* Export Buttons *@
    <div class="epi-export-panel">
        <span class="epi-result-count">@TotalItems logs found</span>
        <div class="epi-export-buttons">
            <button class="epi-button epi-button--secondary" @onclick="ExportToCsv" disabled="@(IsLoading || TotalItems == 0)">Export CSV</button>
            <button class="epi-button epi-button--secondary" @onclick="ExportToJson" disabled="@(IsLoading || TotalItems == 0)">Export JSON</button>
        </div>
    </div>

    @* Logs Table *@
    @if (IsLoading)
    {
        <div class="epi-loading">
            <div class="epi-spinner"></div>
            <span>Loading request logs...</span>
        </div>
    }
    else if (Logs.Count == 0)
    {
        <div class="epi-empty-state">
            <p>No request logs found.</p>
            @if (HasActiveFilters)
            {
                <p>Try adjusting your filters.</p>
            }
        </div>
    }
    else
    {
        <div class="epi-table-container">
            <table class="epi-table">
                <thead>
                    <tr>
                        <th>Created At</th>
                        <th>Method</th>
                        <th>Path</th>
                        <th>Operation</th>
                        <th>Status</th>
                        <th>Duration</th>
                        <th>User</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Logs)
                    {
                        <tr>
                            <td>@FormatDateTime(log.CreatedAt)</td>
                            <td><span class="epi-method-badge epi-method-badge--@log.Method?.ToLowerInvariant()">@log.Method</span></td>
                            <td class="epi-path-cell" title="@log.Path">@TruncatePath(log.Path)</td>
                            <td>@log.OperationName</td>
                            <td><span class="epi-status-badge @GetStatusBadgeClass(log.Success)">@GetStatusText(log.Success)</span></td>
                            <td>@FormatDuration(log.Duration)</td>
                            <td>@log.User</td>
                            <td>
                                <button class="epi-button epi-button--small" @onclick="() => ShowLogDetails(log)">View</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (TotalPages > 1)
        {
            <div class="epi-pagination">
                <button class="epi-pagination-btn" @onclick="GoToPreviousPage" disabled="@(CurrentPage == 1)">Previous</button>
                @for (int i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                {
                    var pageNum = i;
                    <button class="epi-pagination-btn @(pageNum == CurrentPage ? "epi-pagination-btn--active" : "")" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                }
                <button class="epi-pagination-btn" @onclick="GoToNextPage" disabled="@(CurrentPage == TotalPages)">Next</button>
                <span class="epi-pagination-info">Page @CurrentPage of @TotalPages</span>
            </div>
        }
    }

    @* Details Modal *@
    @if (ShowDetails && SelectedLog != null)
    {
        <div class="epi-modal-overlay" @onclick="CloseDetails">
            <div class="epi-modal" @onclick:stopPropagation="true">
                <div class="epi-modal-header">
                    <h3>Request Log Details</h3>
                    <button class="epi-modal-close" @onclick="CloseDetails">&times;</button>
                </div>
                <div class="epi-modal-body">
                    <div class="epi-detail-grid">
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">ID:</span>
                            <span class="epi-detail-value">@SelectedLog.Id</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Created At:</span>
                            <span class="epi-detail-value">@FormatDateTime(SelectedLog.CreatedAt)</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Instance ID:</span>
                            <span class="epi-detail-value">@SelectedLog.InstanceId</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Method:</span>
                            <span class="epi-detail-value"><span class="epi-method-badge epi-method-badge--@SelectedLog.Method?.ToLowerInvariant()">@SelectedLog.Method</span></span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Host:</span>
                            <span class="epi-detail-value">@SelectedLog.Host</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Path:</span>
                            <span class="epi-detail-value epi-detail-value--wrap">@SelectedLog.Path</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Operation Type:</span>
                            <span class="epi-detail-value">@SelectedLog.OperationType</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Operation Name:</span>
                            <span class="epi-detail-value">@SelectedLog.OperationName</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Status:</span>
                            <span class="epi-detail-value">@SelectedLog.Status</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Success:</span>
                            <span class="epi-detail-value"><span class="epi-status-badge @GetStatusBadgeClass(SelectedLog.Success)">@GetStatusText(SelectedLog.Success)</span></span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">Duration:</span>
                            <span class="epi-detail-value">@FormatDuration(SelectedLog.Duration)</span>
                        </div>
                        <div class="epi-detail-row">
                            <span class="epi-detail-label">User:</span>
                            <span class="epi-detail-value">@SelectedLog.User</span>
                        </div>
                        @if (!string.IsNullOrEmpty(SelectedLog.Message))
                        {
                            <div class="epi-detail-row epi-detail-row--full">
                                <span class="epi-detail-label">Message:</span>
                                <pre class="epi-detail-message">@SelectedLog.Message</pre>
                            </div>
                        }
                    </div>
                </div>
                <div class="epi-modal-footer">
                    <button class="epi-button" @onclick="CloseDetails">Close</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private static string TruncatePath(string? path)
    {
        if (string.IsNullOrEmpty(path)) return string.Empty;
        return path.Length > 50 ? path.Substring(0, 47) + "..." : path;
    }
}

