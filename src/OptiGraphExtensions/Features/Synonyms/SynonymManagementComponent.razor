        font-size: 14px;
    }

    .epi-pagination-controls {
        display: flex;
        gap: 4px;
        align-items: center;
    }

    @@media (max-width: 768px) {
        .epi-pagination {
            flex-direction: column;
            gap: 12px;
        }
        
        .epi-pagination-info {
