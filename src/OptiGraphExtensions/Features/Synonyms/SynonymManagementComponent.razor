@using Microsoft.AspNetCore.Components
@using OptiGraphExtensions.Features.Synonyms
@using OptiGraphExtensions.Entities
@inherits SynonymManagementComponentBase

<div class="epi-contentArea">
    <div class="epi-contentAreaHeader">
        <h1 class="epi-h1">Synonym Management</h1>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--danger">
            <div class="epi-notificationbar-text">@ErrorMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">×</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--success">
            <div class="epi-notificationbar-text">@SuccessMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">×</button>
        </div>
    }

    <div class="epi-contentGroup">
        <div class="epi-groupHeader">
            <h2 class="epi-h2">Add New Synonym</h2>
        </div>
        <div class="epi-form">
            <div class="epi-form-field">
                <label for="newSynonym" class="epi-label">Synonym Text</label>
                <input id="newSynonym" @bind="NewSynonym.Synonym" @onkeypress="@(async (e) => { if (e.Key == "Enter") await CreateSynonym(); })" 
                       class="epi-textbox" placeholder="Enter synonym..." maxlength="255" />
            </div>
            <div class="epi-form-actions">
                <button @onclick="CreateSynonym" class="epi-button epi-button--primary" disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <span class="epi-loader-small"></span>
                    }
                    Add Synonym
                </button>
            </div>
        </div>
    </div>

    <div class="epi-contentGroup">
        <div class="epi-groupHeader">
            <h2 class="epi-h2">Existing Synonyms</h2>
            <div class="epi-header-actions">
                <span class="epi-badge">@TotalItems total synonyms</span>
                <button @onclick="SyncSynonymsToOptimizelyGraph" class="epi-button epi-button--secondary epi-button--small" disabled="@(IsLoading || IsSyncing)">
                    @if (IsSyncing)
                    {
                        <span class="epi-loader-small"></span>
                    }
                    Sync to Graph
                </button>
            </div>
        </div>
        <div class="epi-content">
            @if (IsLoading)
            {
                <div class="epi-loading">
                    <div class="epi-loader"></div>
                    <p>Loading synonyms...</p>
                </div>
            }
            else if (!AllSynonyms.Any())
            {
                <div class="epi-empty-state">
                    <p>No synonyms found. Create your first synonym above.</p>
                </div>
            }
            else
            {
                <div class="epi-table-container">
                    <table class="epi-table">
                        <thead>
                            <tr>
                                <th>Synonym</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th class="epi-align-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var synonym in Synonyms)
                            {
                                <tr>
                                    <td>
                                        @if (IsEditing && EditingSynonym.Id == synonym.Id)
                                        {
                                            <input @bind="EditingSynonym.Synonym" @onkeypress="@(async (e) => { if (e.Key == "Enter") await UpdateSynonym(); else if (e.Key == "Escape") CancelEdit(); })" 
                                                   class="epi-textbox epi-textbox--small" maxlength="255" />
                                        }
                                        else
                                        {
                                            <span>@synonym.SynonymItem</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@(synonym.CreatedBy ?? "Unknown")</small>
                                    </td>
                                    <td>
                                        <small>@(synonym.CreatedAt?.ToString("MMM dd, yyyy HH:mm") ?? "Unknown")</small>
                                    </td>
                                    <td class="epi-align-right">
                                        @if (IsEditing && EditingSynonym.Id == synonym.Id)
                                        {
                                            <div class="epi-button-group">
                                                <button @onclick="UpdateSynonym" class="epi-button epi-button--success epi-button--small" title="Save">
                                                    Save
                                                </button>
                                                <button @onclick="CancelEdit" class="epi-button epi-button--secondary epi-button--small" title="Cancel">
                                                    Cancel
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="epi-button-group">
                                                <button @onclick="() => StartEdit(synonym)" class="epi-button epi-button--secondary epi-button--small" title="Edit" disabled="@IsEditing">
                                                    Edit
                                                </button>
                                                <button @onclick="@(async () => { if (await ConfirmDelete()) await DeleteSynonym(synonym.Id); })" 
                                                        class="epi-button epi-button--danger epi-button--small" 
                                                        title="Delete" 
                                                        disabled="@IsEditing">
                                                    Delete
                                                </button>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if (TotalPages > 1)
                {
                    <div class="epi-pagination">
                        <div class="epi-pagination-info">
                            Showing @((CurrentPage - 1) * PageSize + 1) to @Math.Min(CurrentPage * PageSize, TotalItems) of @TotalItems synonyms
                        </div>
                        <div class="epi-pagination-controls">
                            <button @onclick="GoToPreviousPage" 
                                    class="epi-button epi-button--secondary epi-button--small" 
                                    disabled="@(CurrentPage == 1)">
                                Previous
                            </button>
                            
                            @for (int i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                            {
                                var pageNumber = i; // Capture for lambda
                                <button @onclick="() => GoToPage(pageNumber)" 
                                        class="epi-button epi-button--small @(CurrentPage == pageNumber ? "epi-button--primary" : "epi-button--secondary")">
                                    @pageNumber
                                </button>
                            }
                            
                            <button @onclick="GoToNextPage" 
                                    class="epi-button epi-button--secondary epi-button--small" 
                                    disabled="@(CurrentPage == TotalPages)">
                                Next
                            </button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

