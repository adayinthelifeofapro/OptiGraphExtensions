        animation: spin 1s linear infinite;
        margin: 0 auto 10px;
    }

    .epi-loader-small {
        display: inline-block;
        width: 16px;
        height: 16px;
        border: 2px solid #ffffff;
        border-radius: 50%;
        border-top-color: transparent;
        animation: spin 1s ease-in-out infinite;
        margin-right: 8px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
