    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .epi-empty-state {
        text-align: center;
        padding: 40px 20px;
        color: #6c757d;
    }

    .epi-pagination {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 0;
        margin-top: 16px;
