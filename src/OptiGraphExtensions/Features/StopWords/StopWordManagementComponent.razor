        flex: 0 0 200px;
    }

    .epi-form-field--stopword {
        flex: 1;
        min-width: 300px;
    }

    .epi-label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
        color: #333;
    }

    .epi-textbox {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }

    .epi-textbox--small {
        padding: 4px 8px;
        font-size: 13px;
    }

    .epi-select {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        background-color: #fff;
        cursor: pointer;
    }

    .epi-select--small {
        padding: 4px 8px;
        font-size: 13px;
        width: auto;
        min-width: 150px;
    }

    .epi-button {
        display: inline-block;
        padding: 8px 16px;
        background: #0066cc;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        font-size: 14px;
        transition: background-color 0.2s;
    }

    .epi-button:hover:not(:disabled) {
        background: #0052a3;
    }

    .epi-button:disabled {
        background: #ccc;
        cursor: not-allowed;
    }

    .epi-button--primary {
        background: #0066cc;
    }

    .epi-button--success {
        background: #5cb85c;
    }

    .epi-button--success:hover:not(:disabled) {
        background: #449d44;
    }

    .epi-button--danger {
        background: #d9534f;
    }

    .epi-button--danger:hover:not(:disabled) {
        background: #c9302c;
    }

    .epi-button--secondary {
        background: #6c757d;
    }

    .epi-button--secondary:hover:not(:disabled) {
        background: #5a6268;
    }

    .epi-button--small {
        padding: 4px 8px;
        font-size: 12px;
    }

    .epi-button-group {
        display: inline-flex;
