@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using OptiGraphExtensions.Features.StopWords
@using OptiGraphExtensions.Features.Common.Services
@using OptiGraphExtensions.Entities
@using OptiGraphExtensions.Features.StopWords.Models
@inherits StopWordManagementComponentBase

<div class="epi-contentArea">
    <div class="epi-contentAreaHeader">
        <h1 class="epi-h1">Stop Word Management</h1>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--danger">
            <div class="epi-notificationbar-text">@ErrorMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">x</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="epi-notificationbar epi-notificationbar--success">
            <div class="epi-notificationbar-text">@SuccessMessage</div>
            <button type="button" @onclick="ClearMessages" class="epi-notificationbar-close" aria-label="Close">x</button>
        </div>
    }

    <div class="epi-contentGroup">
        <div class="epi-groupHeader">
            <h2 class="epi-h2">Add New Stop Word</h2>
        </div>
        <div class="epi-form">
            <div class="epi-form-row">
                <div class="epi-form-field epi-form-field--language">
                    <label for="newStopWordLanguage" class="epi-label">Language</label>
                    <select id="newStopWordLanguage" @bind="NewStopWord.Language" class="epi-select">
                        @foreach (var language in AvailableLanguages)
                        {
                            <option value="@language.LanguageCode">@language.DisplayName</option>
                        }
                    </select>
                </div>
                <div class="epi-form-field epi-form-field--stopword">
                    <label for="newStopWord" class="epi-label">Stop Word</label>
                    <input id="newStopWord" @bind="NewStopWord.Word" @onkeypress="HandleNewStopWordKeyPress"
                           class="epi-textbox" placeholder="Enter stop word (e.g., the, a, an)..." maxlength="100" />
                </div>
            </div>
            <div class="epi-form-actions">
                <button @onclick="CreateStopWord" class="epi-button epi-button--primary" disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <span class="epi-loader-small"></span>
                    }
                    Add Stop Word
                </button>
            </div>
        </div>
    </div>

    <div class="epi-contentGroup">
        <div class="epi-groupHeader">
            <h2 class="epi-h2">Existing Stop Words</h2>
            <div class="epi-header-actions">
                <div class="epi-filter-group">
                    <label for="languageFilter" class="epi-label-inline">Filter by Language:</label>
                    <select id="languageFilter" @onchange="OnLanguageFilterChanged" class="epi-select epi-select--small">
                        <option value="">All Languages</option>
                        @foreach (var language in AvailableLanguages)
                        {
                            <option value="@language.LanguageCode" selected="@(SelectedLanguageFilter == language.LanguageCode)">@language.DisplayName</option>
                        }
                    </select>
                </div>
                <span class="epi-badge">@TotalItems @(string.IsNullOrEmpty(SelectedLanguageFilter) ? "total" : "filtered") stop words</span>
                <div class="epi-button-group">
                    @if (!string.IsNullOrEmpty(SelectedLanguageFilter))
                    {
                        <button @onclick="SyncStopWordsForSelectedLanguage" class="epi-button epi-button--secondary epi-button--small" disabled="@(IsLoading || IsSyncing || IsDeleting)" title="Sync stop words for the selected language only">
                            @if (IsSyncing)
                            {
                                <span class="epi-loader-small"></span>
                            }
                            Sync @GetLanguageDisplayName(SelectedLanguageFilter)
                        </button>
                        <button @onclick="DeleteAllStopWordsFromGraph" class="epi-button epi-button--danger epi-button--small" disabled="@(IsLoading || IsSyncing || IsDeleting)" title="Delete all stop words for the selected language from Optimizely Graph">
                            @if (IsDeleting)
                            {
                                <span class="epi-loader-small"></span>
                            }
                            Delete All from Graph
                        </button>
                    }
                    <button @onclick="SyncStopWordsToOptimizelyGraph" class="epi-button epi-button--secondary epi-button--small" disabled="@(IsLoading || IsSyncing || IsDeleting)" title="Sync all stop words to Graph (grouped by language)">
                        @if (IsSyncing)
                        {
                            <span class="epi-loader-small"></span>
                        }
                        Sync All to Graph
                    </button>
                </div>
            </div>
        </div>
        <div class="epi-content">
            @if (IsLoading)
            {
                <div class="epi-loading">
                    <div class="epi-loader"></div>
                    <p>Loading stop words...</p>
                </div>
            }
            else if (!FilteredStopWords.Any())
            {
                <div class="epi-empty-state">
                    @if (string.IsNullOrEmpty(SelectedLanguageFilter))
                    {
                        <p>No stop words found. Create your first stop word above.</p>
                    }
                    else
                    {
                        <p>No stop words found for the selected language. Create a stop word or select a different language filter.</p>
                    }
                </div>
            }
            else
            {
                <div class="epi-table-container">
                    <table class="epi-table">
                        <thead>
                            <tr>
                                <th>Stop Word</th>
                                <th>Language</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th class="epi-align-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stopWord in StopWords)
                            {
                                <tr>
                                    <td>
                                        @if (IsEditing && EditingStopWord.Id == stopWord.Id)
                                        {
                                            <input @bind="EditingStopWord.Word" @onkeypress="HandleEditStopWordKeyPress"
                                                   class="epi-textbox epi-textbox--small" maxlength="100" />
                                        }
                                        else
                                        {
                                            <span class="epi-stopword-badge">@stopWord.Word</span>
                                        }
                                    </td>
                                    <td>
                                        @if (IsEditing && EditingStopWord.Id == stopWord.Id)
                                        {
                                            <select @bind="EditingStopWord.Language" class="epi-select epi-select--small">
                                                @foreach (var language in AvailableLanguages)
                                                {
                                                    <option value="@language.LanguageCode">@language.DisplayName</option>
                                                }
                                            </select>
                                        }
                                        else
                                        {
                                            <span class="epi-language-badge">@GetLanguageDisplayName(stopWord.Language)</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@(stopWord.CreatedBy ?? "Unknown")</small>
                                    </td>
                                    <td>
                                        <small>@(stopWord.CreatedAt?.ToString("MMM dd, yyyy HH:mm") ?? "Unknown")</small>
                                    </td>
                                    <td class="epi-align-right">
                                        @if (IsEditing && EditingStopWord.Id == stopWord.Id)
                                        {
                                            <div class="epi-button-group">
                                                <button @onclick="UpdateStopWord" class="epi-button epi-button--success epi-button--small" title="Save">
                                                    Save
                                                </button>
                                                <button @onclick="CancelEdit" class="epi-button epi-button--secondary epi-button--small" title="Cancel">
                                                    Cancel
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="epi-button-group">
                                                <button @onclick="() => StartEdit(stopWord)" class="epi-button epi-button--secondary epi-button--small" title="Edit" disabled="@IsEditing">
                                                    Edit
                                                </button>
                                                <button @onclick="@(async () => { if (await ConfirmDelete()) await DeleteStopWord(stopWord.Id); })"
                                                        class="epi-button epi-button--danger epi-button--small"
                                                        title="Delete"
                                                        disabled="@IsEditing">
                                                    Delete
                                                </button>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (TotalPages > 1)
                {
                    <div class="epi-pagination">
                        <div class="epi-pagination-info">
                            Showing @((CurrentPage - 1) * PageSize + 1) to @Math.Min(CurrentPage * PageSize, TotalItems) of @TotalItems stop words
                        </div>
                        <div class="epi-pagination-controls">
                            <button @onclick="GoToPreviousPage"
                                    class="epi-button epi-button--secondary epi-button--small"
                                    disabled="@(CurrentPage == 1)">
                                Previous
                            </button>

                            @for (int i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                            {
                                var pageNumber = i; // Capture for lambda
                                <button @onclick="() => GoToPage(pageNumber)"
                                        class="epi-button epi-button--small @(CurrentPage == pageNumber ? "epi-button--primary" : "epi-button--secondary")">
                                    @pageNumber
                                </button>
                            }

                            <button @onclick="GoToNextPage"
                                    class="epi-button epi-button--secondary epi-button--small"
                                    disabled="@(CurrentPage == TotalPages)">
                                Next
                            </button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<style>
