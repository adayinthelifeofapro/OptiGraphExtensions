    .epi-notificationbar-close {
        background: none;
        border: none;
        font-size: 18px;
        cursor: pointer;
        padding: 0;
        margin-left: 12px;
        opacity: 0.7;
    }

    .epi-notificationbar-close:hover {
        opacity: 1;
    }

    .epi-loading {
        text-align: center;
        padding: 40px 20px;
    }

    .epi-loader {
