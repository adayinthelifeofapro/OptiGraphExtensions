        border-top: 3px solid #0066cc;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        animation: spin 1s linear infinite;
        margin: 0 auto 10px;
    }

    .epi-loader-small {
        display: inline-block;
        width: 16px;
        height: 16px;
        border: 2px solid #ffffff;
        border-radius: 50%;
        border-top-color: transparent;
        animation: spin 1s ease-in-out infinite;
        margin-right: 8px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .epi-empty-state {
        text-align: center;
        padding: 40px 20px;
        color: #6c757d;
    }

    .epi-pagination {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 0;
        margin-top: 16px;
        border-top: 1px solid #ddd;
    }

    .epi-pagination-info {
        color: #6c757d;
        font-size: 14px;
    }

    .epi-pagination-controls {
        display: flex;
        gap: 4px;
        align-items: center;
    }

    @@media (max-width: 768px) {
        .epi-form-row {
            flex-direction: column;
        }

        .epi-form-field--language {
            flex: 1;
        }

        .epi-groupHeader {
            flex-direction: column;
            align-items: flex-start;
        }

        .epi-pagination {
            flex-direction: column;
            gap: 12px;
        }

        .epi-pagination-info {
            order: 2;
        }

        .epi-pagination-controls {
            order: 1;
        }
    }
</style>

@code {
    private async Task HandleNewStopWordKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await CreateStopWord();
        }
    }

    private async Task HandleEditStopWordKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await UpdateStopWord();
        }
        else if (e.Key == "Escape")
        {
            CancelEdit();
        }
    }
}
