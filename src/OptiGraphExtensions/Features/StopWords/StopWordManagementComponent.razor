        font-weight: 500;
        color: #333;
        white-space: nowrap;
    }

    .epi-content, .epi-form {
        padding: 20px;
    }

    .epi-form-row {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
    }

    .epi-form-field {
        margin-bottom: 15px;
    }

